<Page x:Class="TFitnessApp.DiemDanhPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F5F5F5"
      Title="DiemDanhPage">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Statistics Cards -->
        <Grid Grid.Row="0" Height="120" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Card 1: Điểm danh hôm nay -->
            <Border Background="#51E689" 
                   CornerRadius="12" 
                   Margin="0,0,15,0" 
                   Padding="20">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="txtSoDiemDanhHomNay"
                              Text="87"
                              FontSize="40" 
                              Foreground="White" 
                              FontWeight="Bold"/>
                    <TextBlock Text="Điểm danh hôm nay" 
                              Foreground="White" 
                              FontSize="16"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 2: Đang tập luyện -->
            <Border Background="#7AAEFF" 
                   CornerRadius="12" 
                   Margin="0,0,15,0" 
                   Padding="20" 
                   Grid.Column="1">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="txtDangTapLuyen"
                              Text="12"
                              FontSize="40" 
                              Foreground="White" 
                              FontWeight="Bold"/>
                    <TextBlock Text="Đang tập luyện" 
                              Foreground="White" 
                              FontSize="16"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 3: Đã hoàn thành -->
            <Border Background="#FF974E" 
                   CornerRadius="12" 
                   Margin="0,0,15,0" 
                   Padding="20" 
                   Grid.Column="2">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="txtDaHoanThanh"
                              Text="75"
                              FontSize="40" 
                              Foreground="White" 
                              FontWeight="Bold"/>
                    <TextBlock Text="Đã hoàn thành" 
                              Foreground="White" 
                              FontSize="16"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 4: Thời gian TB -->
            <Border Background="#F8B648" 
                   CornerRadius="12" 
                   Padding="20" 
                   Grid.Column="3">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="txtThoiGianTB"
                              Text="2.5h"
                              FontSize="40" 
                              Foreground="White" 
                              FontWeight="Bold"/>
                    <TextBlock Text="Thời gian TB" 
                              Foreground="White" 
                              FontSize="16"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Form thêm mới -->
            <Border Background="White" 
                   CornerRadius="12" 
                   Padding="30" 
                   Margin="0,0,15,0">
                <StackPanel>
                    <TextBlock Text="Thêm mới điểm danh" 
                              FontSize="22" 
                              FontWeight="Bold" 
                              Margin="0,0,0,30"/>

                    <!-- Mã học viên -->
                    <TextBlock Text="Mã học viên:" 
                              FontSize="14" 
                              Margin="0,0,0,8"/>
                    <TextBox Height="45" 
                            FontSize="14" 
                            Padding="15,0"
                            VerticalContentAlignment="Center"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"/>

                    <!-- Trạng thái -->
                    <TextBlock Text="Trạng thái:" 
                              FontSize="14" 
                              Margin="0,20,0,8"/>
                    <ComboBox Height="45" 
                             FontSize="14" 
                             Padding="15,0"
                             VerticalContentAlignment="Center"
                             BorderBrush="#E0E0E0"
                             BorderThickness="1">
                        <ComboBoxItem Content="Chọn trạng thái" IsSelected="True"/>
                    </ComboBox>

                    <!-- Thời gian vào -->
                    <TextBlock Text="Thời gian vào:" 
                              FontSize="14" 
                              Margin="0,20,0,8"/>
                    <TextBox Height="45" 
                            FontSize="14" 
                            Padding="15,0"
                            Text="(Nhập thời gian vào)"
                            Foreground="#999"
                            VerticalContentAlignment="Center"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"/>

                    <!-- Thời gian ra -->
                    <TextBlock Text="Thời gian ra:" 
                              FontSize="14" 
                              Margin="0,20,0,8"/>
                    <TextBox Height="45" 
                            FontSize="14" 
                            Padding="15,0"
                            Text="(Nhập thời gian ra)"
                            Foreground="#999"
                            VerticalContentAlignment="Center"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"/>

                    <!-- Ngày điểm danh -->
                    <TextBlock Text="Ngày điểm danh:" 
                              FontSize="14" 
                              Margin="0,20,0,8"/>
                    <DatePicker Height="45" 
                               FontSize="14" 
                               Padding="15,0"
                               VerticalContentAlignment="Center"
                               BorderBrush="#E0E0E0"
                               BorderThickness="1"/>

                    <!-- Button Lưu -->
                    <Button Height="50" 
                           Margin="0,30,0,0"
                           Background="#DC3545"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                     VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Lưu"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Right Panel - Danh sách điểm danh -->
            <Border Background="White" 
                   CornerRadius="12" 
                   Padding="30" 
                   Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Text="Lịch sử điểm danh" 
                              FontSize="22" 
                              FontWeight="Bold"/>

                    <!-- Search Bar -->
                    <Grid Grid.Row="1" Margin="0,20,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box -->
                        <Border BorderBrush="#E0E0E0" 
                               BorderThickness="1" 
                               CornerRadius="8"
                               Padding="15,0"
                               Height="45">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="🔍" 
                                          FontSize="18" 
                                          VerticalAlignment="Center"
                                          Margin="0,0,10,0"/>
                                <TextBox x:Name="txtSearch"
                                        Grid.Column="1"
                                        BorderThickness="0"
                                        FontSize="14"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        TextChanged="txtSearch_TextChanged"/>
                            </Grid>
                        </Border>

                        <!-- Filter Button -->
                        <Button Grid.Column="1"
                               Width="100"
                               Height="45"
                               Margin="15,0,0,0"
                               Background="#DC3545"
                               Foreground="White"
                               FontSize="14"
                               BorderThickness="0"
                               Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="☰" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Lọc"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- ListView -->
                    <ListView x:Name="lvLichSuDiemDanh"
                             Grid.Row="2"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.View>
                            <GridView>
                                <!-- Họ tên -->
                                <GridViewColumn Width="280">
                                    <GridViewColumn.Header>
                                        <TextBlock Text="Họ tên" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" 
                                                       Margin="0,10">
                                                <Border Width="40" 
                                                       Height="40" 
                                                       CornerRadius="20" 
                                                       Background="#DC3545"
                                                       Margin="0,0,12,0">
                                                    <TextBlock Text="{Binding Avatar}" 
                                                              Foreground="White" 
                                                              FontSize="16"
                                                              FontWeight="Bold"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding HoTen}" 
                                                              FontWeight="SemiBold"
                                                              FontSize="14"/>
                                                    <TextBlock Text="{Binding MaHocVien}" 
                                                              Foreground="#999"
                                                              FontSize="12"
                                                              Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Ngày điểm danh -->
                                <GridViewColumn Width="200">
                                    <GridViewColumn.Header>
                                        <TextBlock Text="Ngày điểm danh" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,10">
                                                <TextBlock Text="{Binding NgayDiemDanh}" 
                                                          FontSize="14"
                                                          Margin="0,0,0,5"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="🕐 " FontSize="13"/>
                                                    <TextBlock FontSize="12" Foreground="#666">
                                                        <Run Text="Vào:"/>
                                                        <Run Text="{Binding ThoiGianVao}" FontWeight="SemiBold"/>
                                                        <Run Text="  Ra:"/>
                                                        <Run Text="{Binding ThoiGianRa}" FontWeight="SemiBold"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Trạng thái -->
                                <GridViewColumn Width="150">
                                    <GridViewColumn.Header>
                                        <TextBlock Text="Trạng thái" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding TrangThaiBadgeColor}" 
                                                   CornerRadius="20" 
                                                   Padding="20,8"
                                                   Margin="0,10"
                                                   HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding TrangThai}" 
                                                          Foreground="White"
                                                          FontSize="13"
                                                          FontWeight="SemiBold"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <!-- Chỉnh sửa -->
                                <GridViewColumn Width="120">
                                    <GridViewColumn.Header>
                                        <TextBlock Text="Chỉnh sửa" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Background="Transparent" 
                                                   BorderThickness="0"
                                                   Cursor="Hand"
                                                   Margin="0,10"
                                                   Click="btnEdit_Click"
                                                   Tag="{Binding}">
                                                <TextBlock Text="✏️" FontSize="20"/>
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>