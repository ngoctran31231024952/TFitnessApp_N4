<Page x:Class="TFitnessApp.DiemDanhPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1260.8"
      Background="#F5F5F5"
      Title="Điểm Danh">

    <Page.Resources>
        <FontFamily x:Key="LatoRegular">pack://application:,,,/Fonts/Lato Regular</FontFamily>
        <FontFamily x:Key="LatoSemibold">pack://application:,,,/Fonts/Lato Semibold</FontFamily>
        <FontFamily x:Key="LatoBold">pack://application:,,,/Fonts/Lato Bold</FontFamily>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource LatoSemibold}"/>
            <Setter Property="Margin" Value="0,6,0,3"/>
        </Style>
        <Style x:Key="TimeComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="{StaticResource LatoRegular}"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style x:Key="CustomDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="{StaticResource LatoRegular}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6C757D"/>
        </Style>
        <Style x:Key="ReadOnlyTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="{StaticResource LatoRegular}"/>
            <Setter Property="Foreground" Value="#6C757D"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <Style x:Key="FilterReadOnlyTextStyle" TargetType="TextBlock" BasedOn="{StaticResource ReadOnlyTextStyle}">
            <Setter Property="Foreground" Value="#000"/>
        </Style>
    </Page.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="popupChinhSua" Visibility="Collapsed" Panel.ZIndex="1001" Grid.RowSpan="2" Background="#80000000">
            <Border Background="White" CornerRadius="12" Width="400" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Chỉnh sửa điểm danh" FontSize="22" FontFamily="{StaticResource LatoBold}" Margin="0,0,0,15"/>
                    <Button Content="✕" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="Transparent" BorderThickness="0" FontSize="20" Foreground="#999"
                            Click="BtnDongPopupChinhSua_Click" Cursor="Hand" Margin="0,-40,-10,0"/>

                    <TextBlock Text="Mã học viên:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtMaHV_ChinhSua" Height="35" FontSize="15" Foreground="#6C757D"
                             FontFamily="{StaticResource LatoRegular}" Padding="15,0" 
                             BorderThickness="0.5" Background="#E9ECEF" VerticalContentAlignment="Center"
                             IsEnabled="False" Margin="0,0,0,10"/>

                    <TextBlock Text="Mã chi nhánh:" Style="{StaticResource LabelStyle}" />
                    <Border Height="35" Background="#E9ECEF" BorderThickness="0.5" Margin="0,0,0,10" CornerRadius="0">
                        <TextBlock x:Name="txtMaCN_ChinhSua" Style="{StaticResource ReadOnlyTextStyle}" />
                    </Border>

                    <TextBlock Text="Ngày điểm danh:" Style="{StaticResource LabelStyle}"/>
                    <DatePicker x:Name="dpNgayDD_ChinhSua" 
                                Style="{StaticResource CustomDatePickerStyle}" 
                                Margin="0,0,0,10" 
                                Background="#E9ECEF"
                                Text="Chọn ngày"/>

                    <TextBlock Text="Trạng thái Lịch tập:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="cmbTrangThai_ChinhSua" Height="35" Padding="15,0" FontSize="15" FontFamily="{StaticResource LatoRegular}"
                              HorizontalContentAlignment="Left" VerticalContentAlignment="Center" BorderThickness="0" Background="#F5F5F5"
                              SelectionChanged="CmbTrangThaiChinhSua_SelectionChanged" Margin="0,0,0,10">
                        <ComboBoxItem Content="Chọn trạng thái" IsSelected="True"/>
                        <ComboBoxItem Content="Đang tập"/>
                        <ComboBoxItem Content="Đã hoàn thành"/>
                    </ComboBox>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Thời gian vào:" Style="{StaticResource LabelStyle}"/>
                            <Grid x:Name="GridThoiGianVao_ChinhSua">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="cmbGioVao_ChinhSua" Style="{StaticResource TimeComboBoxStyle}" HorizontalContentAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text=":" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8,0" FontSize="18" FontWeight="Bold"/>
                                <ComboBox x:Name="cmbPhutVao_ChinhSua" Style="{StaticResource TimeComboBoxStyle}" Grid.Column="2" HorizontalContentAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Thời gian ra:" Style="{StaticResource LabelStyle}"/>
                            <Grid x:Name="GridThoiGianRa_ChinhSua">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="cmbGioRa_ChinhSua" Style="{StaticResource TimeComboBoxStyle}" HorizontalContentAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text=":" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8,0" FontSize="18" FontWeight="Bold"/>
                                <ComboBox x:Name="cmbPhutRa_ChinhSua" Style="{StaticResource TimeComboBoxStyle}" Grid.Column="2" HorizontalContentAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <Button Click="BtnLuuChinhSua_Click" Height="40" Background="#DC3545" Foreground="White"
                            FontFamily="{StaticResource LatoBold}" Margin="0,35,0,0"
                            BorderThickness="0" Cursor="Hand" Content="Lưu chỉnh sửa">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <Grid x:Name="popupBoLoc" Visibility="Collapsed" Panel.ZIndex="1000" Grid.RowSpan="2" Background="#80000000">
            <Border Background="White" CornerRadius="12" Width="450" Height="550" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Bộ lọc điểm danh" FontSize="22" FontFamily="{StaticResource LatoBold}"/>
                        <Button Content="✕" Width="30" Height="30" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0"
                                FontSize="20" Foreground="#999" Click="BtnDongPopup_Click" Cursor="Hand"/>
                    </Grid>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>

                            <TextBlock Text="Mã học viên:" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="txtLocMaHV" Height="35" FontSize="15" FontFamily="{StaticResource LatoRegular}"
                                     Padding="15,0" BorderThickness="0" Background="#F5F5F5" VerticalContentAlignment="Center"
                                     TextChanged="TxtLocMaHV_TextChanged"/>

                            <TextBlock Text="Họ tên:" Style="{StaticResource LabelStyle}"/>
                            <Border Height="35" Background="#E9ECEF" BorderThickness="0.5" CornerRadius="0">
                                <TextBlock x:Name="txtLocHoTen" Style="{StaticResource FilterReadOnlyTextStyle}"/>
                            </Border>

                            <TextBlock Text="Mã chi nhánh:" Style="{StaticResource LabelStyle}"/>
                            <Border Height="35" Background="#E9ECEF" BorderThickness="0.5" CornerRadius="0" Margin="0,0,0,10">
                                <TextBlock x:Name="txtLocMaCN" Style="{StaticResource FilterReadOnlyTextStyle}"/>
                            </Border>

                            <TextBlock Text="Từ ngày:" Style="{StaticResource LabelStyle}"/>
                            <DatePicker x:Name="dpLocTuNgay" Style="{StaticResource CustomDatePickerStyle}"/>
                            <TextBlock Text="Đến ngày:" Style="{StaticResource LabelStyle}"/>
                            <DatePicker x:Name="dpLocDenNgay" Style="{StaticResource CustomDatePickerStyle}"/>

                            <TextBlock Text="Trạng thái:" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="cmbLocTrangThai" Height="35" Padding="15,0" FontSize="15" FontFamily="{StaticResource LatoRegular}"
                                      HorizontalContentAlignment="Left" VerticalContentAlignment="Center" BorderThickness="0" Background="#F5F5F5">
                                <ComboBoxItem Content="Tất cả" IsSelected="True"/>
                                <ComboBoxItem Content="Đang tập"/>
                                <ComboBoxItem Content="Đã hoàn thành"/>
                            </ComboBox>
                        </StackPanel>
                    </ScrollViewer>
                    <Grid Grid.Row="2" Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Height="40" Background="#6C757D" Foreground="White" FontFamily="{StaticResource LatoBold}"
                                 BorderThickness="0" Click="BtnXoaBoLoc_Click" Cursor="Hand" Content="Xóa bộ lọc" FontSize="16">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Grid.Column="2" Height="40" Background="#DC3545" Foreground="White" FontFamily="{StaticResource LatoBold}"
                                 BorderThickness="0" Click="BtnApDungBoLoc_Click" Cursor="Hand" Content="Áp dụng" FontSize="16">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="0" Height="100" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Background="#51E689" CornerRadius="12" Margin="0,0,12,0" Padding="20">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:Name="txtSoDiemDanhHomNay" Text="0"
                               FontSize="40" Foreground="White"
                               FontFamily="{StaticResource LatoBold}" HorizontalAlignment="Center" Height="40"/>
                    <TextBlock Text="Điểm danh hôm nay" Foreground="White" FontSize="14"
                               FontFamily="{StaticResource LatoSemibold}" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="#7AAEFF" CornerRadius="12" Margin="0,0,12,0" Padding="20" Grid.Column="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:Name="txtDangTapLuyen" Text="0"
                               FontSize="40" Foreground="White"
                               FontFamily="{StaticResource LatoBold}" HorizontalAlignment="Center" Height="40"/>
                    <TextBlock Text="Đang tập luyện" Foreground="White" FontSize="14"
                               FontFamily="{StaticResource LatoSemibold}" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="#FF974E" CornerRadius="12" Margin="0,0,12,0" Padding="20" Grid.Column="2">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:Name="txtDaHoanThanh" Text="0"
                               FontSize="40" Foreground="White"
                               FontFamily="{StaticResource LatoBold}" HorizontalAlignment="Center" Height="40"/>
                    <TextBlock Text="Đã hoàn thành" Foreground="White" FontSize="14"
                               FontFamily="{StaticResource LatoSemibold}" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="#F8B648" CornerRadius="12" Padding="20" Grid.Column="3">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:Name="txtThoiGianTB" Text="0h"
                               FontSize="40" Foreground="White"
                               FontFamily="{StaticResource LatoBold}" HorizontalAlignment="Center" Height="40"/>
                    <TextBlock Text="Thời gian trung bình" Foreground="White" FontSize="14"
                               FontFamily="{StaticResource LatoSemibold}" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,12,0" VerticalAlignment="Top">
                    <StackPanel>
                        <TextBlock Text="Thêm mới điểm danh"
                                   FontSize="22"
                                   FontFamily="{StaticResource LatoBold}"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Mã học viên:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtMaHocVien" Height="35" FontSize="15" FontFamily="{StaticResource LatoRegular}"
                                 Padding="15,0" BorderThickness="0" Background="#F5F5F5" VerticalContentAlignment="Center"
                                 TextChanged="TxtMaHocVien_TextChanged"/>

                        <TextBlock Text="Họ tên:" Style="{StaticResource LabelStyle}"/>
                        <Border Height="35" Background="#E9ECEF" BorderThickness="0.5" CornerRadius="0">
                            <TextBlock x:Name="txtHoTen" Style="{StaticResource ReadOnlyTextStyle}"/>
                        </Border>

                        <TextBlock Text="Trạng thái:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="cmbTrangThai" Height="35" Padding="15,0" FontSize="15" FontFamily="{StaticResource LatoRegular}"
                                  HorizontalContentAlignment="Left" VerticalContentAlignment="Center" BorderThickness="0" Background="#F5F5F5"
                                  SelectionChanged="CmbTrangThai_SelectionChanged">
                            <ComboBoxItem Content="Chọn trạng thái" IsSelected="True"/>
                            <ComboBoxItem Content="Check-in"/>
                            <ComboBoxItem Content="Check-out"/>
                        </ComboBox>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Thời gian vào:" Style="{StaticResource LabelStyle}" Margin="0,6,0,3"/>
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Thời gian ra:" Style="{StaticResource LabelStyle}" Margin="0,6,0,3"/>

                            <Grid x:Name="GridThoiGianVao" Grid.Row="1" Grid.Column="0" Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="cmbGioVao" Style="{StaticResource TimeComboBoxStyle}" HorizontalContentAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text=":" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8,0" FontSize="18" FontWeight="Bold"/>
                                <ComboBox x:Name="cmbPhutVao" Style="{StaticResource TimeComboBoxStyle}" Grid.Column="2" HorizontalContentAlignment="Center"/>
                            </Grid>

                            <Grid x:Name="GridThoiGianRa" Grid.Row="1" Grid.Column="2" Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="cmbGioRa" Style="{StaticResource TimeComboBoxStyle}" HorizontalContentAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text=":" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8,0" FontSize="18" FontWeight="Bold"/>
                                <ComboBox x:Name="cmbPhutRa" Style="{StaticResource TimeComboBoxStyle}" Grid.Column="2" HorizontalContentAlignment="Center"/>
                            </Grid>
                        </Grid>

                        <TextBlock Text="Tên buổi tập:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtTenBuoiTap" Height="35" FontSize="15" FontFamily="{StaticResource LatoRegular}"
                                 Padding="15,0" BorderThickness="0.5" Background="#E9ECEF" VerticalContentAlignment="Center" IsEnabled="False"/>

                        <TextBlock Text="Mã chi nhánh:" Style="{StaticResource LabelStyle}"/>
                        <Border Height="35" Background="#E9ECEF" BorderThickness="0.5" CornerRadius="0">
                            <TextBlock x:Name="txtMaCN_ThemMoi" Style="{StaticResource ReadOnlyTextStyle}"/>
                        </Border>

                        <TextBlock Text="Ngày điểm danh:" Style="{StaticResource LabelStyle}" />
                        <DatePicker x:Name="dpNgayDiemDanh" 
                                    Style="{StaticResource CustomDatePickerStyle}" 
                                    Background="#F5F5F5" 
                                    Text="Chọn ngày"/>

                        <Button Click="BtnLuu_Click" Height="45" Background="#DC3545" Foreground="White"
                                FontFamily="{StaticResource LatoBold}" Margin="0,15,0,0"
                                BorderThickness="0" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="+" FontSize="22" Margin="0,0,8,0"/>
                                <TextBlock Text="Lưu" FontSize="16"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </ScrollViewer>

            <Border Background="White" CornerRadius="12" Padding="25" Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Lịch sử điểm danh" FontSize="22"
                               FontFamily="{StaticResource LatoBold}" Margin="0,0,0,18"/>

                    <Grid Grid.Row="1" Margin="0,0,0,18">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border CornerRadius="8" Padding="0" Height="45"
                                 BorderThickness="0" Background="#F5F5F5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Path Grid.Column="0" Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                      Fill="#999" Width="18" Height="18" Margin="15,0,10,0"
                                      VerticalAlignment="Center"/>

                                <TextBox x:Name="txtTimKiem" Grid.Column="1"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"
                                         FontSize="15" Padding="0" Margin="0,0,15,0"
                                         BorderThickness="0"
                                         GotFocus="TxtTimKiem_NhanFocus"
                                         LostFocus="TxtTimKiem_MatFocus"
                                         KeyDown="TxtTimKiem_KeyDown"/>
                            </Grid>
                        </Border>

                        <Button x:Name="btnTimKiem" Grid.Column="1" Width="100" Height="45"
                                 Background="#28A745" Foreground="White"
                                 BorderThickness="0" Margin="12,0,0,0"
                                 Click="BtnTimKiem_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                      Fill="White" Width="14" Height="14" Margin="0,0,6,0"
                                      VerticalAlignment="Center" Stretch="Fill"/>
                                <TextBlock Text="Tìm" FontSize="16"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2" Width="100" Height="45"
                                 Background="#DC3545" Foreground="White"
                                 BorderThickness="0" Margin="12,0,0,0"
                                 Click="BtnMoBoLoc_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="☰" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Lọc" FontSize="16"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <ListView x:Name="lvLichSuDiemDanh" Grid.Row="2"
                              BorderThickness="0" Background="Transparent"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              SelectionChanged="lvLichSuDiemDanh_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="250" Header="Họ tên">
                                    <GridViewColumn.HeaderContainerStyle>
                                        <Style TargetType="{x:Type GridViewColumnHeader}">
                                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                        </Style>
                                    </GridViewColumn.HeaderContainerStyle>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,8">
                                                <Border Width="36" Height="36"
                                                        CornerRadius="18" Background="#DC3545"
                                                        Margin="0,0,10,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding ChuCaiDau}"
                                                               Foreground="White"
                                                               FontFamily="{StaticResource LatoBold}"
                                                               VerticalAlignment="Center" FontSize="14"
                                                               HorizontalAlignment="Center"/>
                                                </Border>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding HoTen}"
                                                               FontFamily="{StaticResource LatoSemibold}" FontSize="14"/>
                                                    <TextBlock Text="{Binding MaHocVien}"
                                                               Foreground="#999" FontSize="12"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="Auto" Header="Ngày điểm danh">
                                    <GridViewColumn.HeaderContainerStyle>
                                        <Style TargetType="{x:Type GridViewColumnHeader}">
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </GridViewColumn.HeaderContainerStyle>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,8">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding NgayDiemDanh}"
                                                               FontFamily="{StaticResource LatoSemibold}" FontSize="14" Margin="0,0,0,2" 
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock FontSize="12" Foreground="#666" HorizontalAlignment="Center">
                                                        <Run Text="Vào: "/>
                                                        <Run Text="{Binding ThoiGianVao}" FontWeight="Bold"/>
                                                        <Run Text="/ Ra: "/>
