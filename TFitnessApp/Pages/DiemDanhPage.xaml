<Page x:Class="TFitnessApp.DiemDanhPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Background="#F0F2F5" d:DesignWidth="1600"
      Title="DiemDanhPage" Height="791">

    <Page.Resources>
        <!-- Style for TextBox with placeholder -->
        <Style x:Key="PlaceholderTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style for TextBox with Error -->
        <Style x:Key="ErrorTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource PlaceholderTextBoxStyle}">
            <Setter Property="BorderBrush" Value="#DC3545"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Style for ComboBox -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style for ComboBox with Error -->
        <Style x:Key="ErrorComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource ComboBoxStyle}">
            <Setter Property="BorderBrush" Value="#DC3545"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Style for DatePicker -->
        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style for DatePicker with Error -->
        <Style x:Key="ErrorDatePickerStyle" TargetType="DatePicker" BasedOn="{StaticResource DatePickerStyle}">
            <Setter Property="BorderBrush" Value="#DC3545"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Statistics Cards -->
        <Grid Grid.Row="1" Height="140" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Card 1: Điểm danh hôm nay -->
            <Border Background="#51E689" 
                   CornerRadius="12" 
                   Margin="0,0,10,0" 
                   Padding="25">
                <StackPanel>
                    <TextBlock x:Name="txtSoDiemDanhHomNay"
                              FontSize="36" 
                              Foreground="White" 
                              FontWeight="Bold"/>
                    <TextBlock Text="Điểm danh hôm nay" 
                              Foreground="White" 
                              FontSize="20"
                              Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 2: Đang tập luyện -->
            <Border Background="#7AAEFF" 
                   CornerRadius="12" 
                   Margin="5,0,5,0" 
                   Padding="25" 
                   Grid.Column="1">
                <StackPanel>
                    <TextBlock x:Name="txtDangTapLuyen"
                              FontSize="36" 
                              Foreground="White" 
                              FontWeight="Bold"/>
                    <TextBlock Text="Đang tập luyện" 
                              Foreground="White" 
                              FontSize="20"
                              Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 3: Đã hoàn thành -->
            <Border Background="#FF974E" 
                   CornerRadius="12" 
                   Margin="5,0,5,0" 
                   Padding="25" 
                   Grid.Column="2">
                <StackPanel>
                    <TextBlock x:Name="txtDaHoanThanh"
                              FontSize="36" 
                              Foreground="White" 
                              FontWeight="Bold"/>
                    <TextBlock Text="Đã hoàn thành" 
                              Foreground="White" 
                              FontSize="20"
                              Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card 4: Thời gian TB -->
            <Border Background="#F8B648" 
                   CornerRadius="12" 
                   Margin="10,0,0,0" 
                   Padding="25" 
                   Grid.Column="3">
                <StackPanel>
                    <TextBlock x:Name="txtThoiGianTB"
                              FontSize="36" 
                              Foreground="White" 
                              FontWeight="Bold"/>
                    <TextBlock Text="Thời gian TB" 
                              Foreground="White" 
                              FontSize="20"
                              Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Bottom Section -->
        <Grid Grid.Row="2" Height="560" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Form điểm danh -->
            <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,20,0" Height="560" VerticalAlignment="Top">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Thêm mới điểm danh" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,25"/>

                        <!-- Mã học viên -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Mã học viên:" 
                                      FontWeight="SemiBold" 
                                      FontSize="15"
                                      Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtErrorMaHocVien" 
                                      Text="⚠" 
                                      FontSize="20" 
                                      Foreground="#DC3545"
                                      Grid.Column="1"
                                      Visibility="Collapsed"
                                      ToolTip="Mã học viên không hợp lệ"/>
                        </Grid>
                        <TextBox x:Name="txtMaHocVien"
                                Style="{StaticResource PlaceholderTextBoxStyle}"
                                Tag="Nhập mã học viên"/>

                        <!-- Trạng thái -->
                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Trạng thái:" 
                                      FontWeight="SemiBold" 
                                      FontSize="15"
                                      Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtErrorTrangThai" 
                                      Text="⚠" 
                                      FontSize="20" 
                                      Foreground="#DC3545"
                                      Grid.Column="1"
                                      Visibility="Collapsed"
                                      ToolTip="Vui lòng chọn trạng thái"/>
                        </Grid>
                        <ComboBox x:Name="cboTrangThai"
                                 Style="{StaticResource ComboBoxStyle}"
                                 SelectionChanged="cboTrangThai_SelectionChanged">
                            <ComboBoxItem Content="Chọn trạng thái" 
                                         Foreground="#999" 
                                         IsSelected="True"
                                         Tag="placeholder"/>
                            <ComboBoxItem Content="Check-in" Tag="checkin"/>
                            <ComboBoxItem Content="Check-out" Tag="checkout"/>
                        </ComboBox>

                        <!-- Thời gian vào -->
                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Thời gian vào:" 
                                      FontWeight="SemiBold" 
                                      FontSize="15"
                                      Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtErrorThoiGianVao" 
                                      Text="⚠" 
                                      FontSize="20" 
                                      Foreground="#DC3545"
                                      Grid.Column="1"
                                      Visibility="Collapsed"
                                      ToolTip="Thời gian vào không hợp lệ"/>
                        </Grid>
                        <Grid>
                            <TextBox x:Name="txtThoiGianVao"
                                    Height="40"
                                    Padding="12,0"
                                    FontSize="14"
                                    VerticalContentAlignment="Center"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Tag="HH:mm"/>
                            <TextBlock Text="🕐" 
                                      FontSize="18"
                                      Foreground="#999"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Margin="0,0,12,0"
                                      IsHitTestVisible="False"/>
                        </Grid>

                        <!-- Thời gian ra -->
                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Thời gian ra:" 
                                      FontWeight="SemiBold" 
                                      FontSize="15"
                                      Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtErrorThoiGianRa" 
                                      Text="⚠" 
                                      FontSize="20" 
                                      Foreground="#DC3545"
                                      Grid.Column="1"
                                      Visibility="Collapsed"
                                      ToolTip="Thời gian ra không hợp lệ"/>
                        </Grid>
                        <Grid>
                            <TextBox x:Name="txtThoiGianRa"
                                    Height="40"
                                    Padding="12,0"
                                    FontSize="14"
                                    VerticalContentAlignment="Center"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    Tag="HH:mm"/>
                            <TextBlock Text="🕐" 
                                      FontSize="18"
                                      Foreground="#999"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Center"
                                      Margin="0,0,12,0"
                                      IsHitTestVisible="False"/>
                        </Grid>

                        <!-- Ngày điểm danh -->
                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Ngày điểm danh:" 
                                      FontWeight="SemiBold" 
                                      FontSize="15"
                                      Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtErrorNgayDiemDanh" 
                                      Text="⚠" 
                                      FontSize="20" 
                                      Foreground="#DC3545"
                                      Grid.Column="1"
                                      Visibility="Collapsed"
                                      ToolTip="Ngày điểm danh không hợp lệ"/>
                        </Grid>
                        <DatePicker x:Name="dpNgayDiemDanh"
                                   Style="{StaticResource DatePickerStyle}"/>

                        <!-- Button Lưu -->
                        <Button x:Name="btnLuu"
                               Background="#DC3545" 
                               Foreground="White" 
                               FontWeight="Bold"
                               BorderThickness="0"
                               Cursor="Hand" 
                               Margin="0,30,0,0"
                               Click="btnLuu_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}"
                                           BorderBrush="{TemplateBinding BorderBrush}"
                                           BorderThickness="{TemplateBinding BorderThickness}"
                                           CornerRadius="22" 
                                           Padding="{TemplateBinding Padding}"
                                           Width="160" 
                                           Height="45">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="+" 
                                          FontSize="18" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Lưu" 
                                          FontSize="16"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Lịch sử điểm danh -->
            <Border Background="White" 
                   CornerRadius="12" 
                   Padding="25" 
                   Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Text="Lịch sử điểm danh" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Margin="0,0,0,20"/>

                    <!-- Search Bar -->
                    <DockPanel Grid.Row="1" Margin="0,0,0,20">
                        <Button x:Name="btnLoc"
                               Content="Lọc" 
                               Width="90" 
                               Height="40" 
                               Background="#FF4647" 
                               Foreground="White"
                               FontSize="14"
                               BorderThickness="0" 
                               DockPanel.Dock="Right"
                               Margin="15,0,0,0"
                               Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="6"
                                           Padding="12,0">
                                        <StackPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center">
                                            <TextBlock Text="☰" 
                                                      FontSize="16" 
                                                      Margin="0,0,6,0"
                                                      Foreground="White"/>
                                            <ContentPresenter/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Border BorderBrush="#E0E0E0" 
                               BorderThickness="1" 
                               CornerRadius="6"
                               Padding="12,0">
                            <DockPanel>
                                <TextBlock Text="🔍" 
                                          FontSize="18" 
                                          DockPanel.Dock="Left" 
                                          Margin="0,0,12,0"
                                          VerticalAlignment="Center"
                                          Foreground="#999"/>
                                <TextBox x:Name="txtSearch"
                                        BorderThickness="0"
                                        FontSize="14"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        TextChanged="txtSearch_TextChanged"/>
                            </DockPanel>
                        </Border>
                    </DockPanel>

                    <!-- ListView -->
                    <ListView x:Name="lvLichSuDiemDanh"
                             Grid.Row="2"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Họ tên" Width="300">
                                    <GridViewColumn.HeaderContainerStyle>
                                        <Style TargetType="{x:Type GridViewColumnHeader}">
                                            <Setter Property="FontSize" Value="15"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="5,10"/>
                                        </Style>
                                    </GridViewColumn.HeaderContainerStyle>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="5">
                                                <Border Width="45" 
                                                       Height="45" 
                                                       CornerRadius="22.5" 
                                                       Background="#DC3545"
                                                       Margin="0,0,12,0">
                                                    <TextBlock Text="{Binding Avatar}" 
                                                              Foreground="White" 
                                                              FontSize="18"
                                                              FontWeight="Bold"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding HoTen}" 
                                                              FontWeight="SemiBold"
                                                              FontSize="15"/>
                                                    <TextBlock Text="{Binding MaHocVien}" 
                                                              Foreground="#999"
                                                              FontSize="13"
                                                              Margin="0,3,0,0"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Ngày điểm danh" Width="200">
                                    <GridViewColumn.HeaderContainerStyle>
                                        <Style TargetType="{x:Type GridViewColumnHeader}">
                                            <Setter Property="FontSize" Value="15"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="5,10"/>
                                        </Style>
                                    </GridViewColumn.HeaderContainerStyle>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="5">
                                                <TextBlock Text="{Binding NgayDiemDanh}" 
                                                          FontSize="14"
                                                          Margin="0,0,0,6"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="🕐" 
                                                              FontSize="14" 
                                                              Margin="0,0,6,0"/>
                                                    <TextBlock FontSize="13" Foreground="#666">
                                                        <Run Text="Vào:"/>
                                                        <Run Text="{Binding ThoiGianVao}" FontWeight="SemiBold"/>
                                                        <Run Text=" Ra:"/>
                                                        <Run Text="{Binding ThoiGianRa}" FontWeight="SemiBold"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Trạng thái" Width="150">
                                    <GridViewColumn.HeaderContainerStyle>
                                        <Style TargetType="{x:Type GridViewColumnHeader}">
                                            <Setter Property="FontSize" Value="15"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="5,10"/>
                                        </Style>
                                    </GridViewColumn.HeaderContainerStyle>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding TrangThaiBadgeColor}" 
                                                   CornerRadius="16" 
                                                   Padding="18,6"
                                                   Margin="5"
                                                   HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding TrangThai}" 
                                                          Foreground="White"
                                                          FontSize="13"
                                                          FontWeight="SemiBold"/>
                                            </Border>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Chỉnh sửa" Width="150">
                                    <GridViewColumn.HeaderContainerStyle>
                                        <Style TargetType="{x:Type GridViewColumnHeader}">
                                            <Setter Property="FontSize" Value="15"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="5,10"/>
                                        </Style>
                                    </GridViewColumn.HeaderContainerStyle>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Background="Transparent" 
                                                   BorderThickness="0"
                                                   Cursor="Hand"
                                                   Padding="12"
                                                   Click="btnEdit_Click"
                                                   Tag="{Binding}">
                                                <TextBlock Text="✏️" FontSize="18"/>
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>