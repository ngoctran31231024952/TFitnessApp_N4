<Page x:Class="TFitnessApp.HocVienPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TFitnessApp"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1100"
      Title="HocVienPage"
      FontFamily="Lato"
      Loaded="Page_Loaded">

    <Page.Resources>

        <SolidColorBrush x:Key="PrimaryRed" Color="#C71A1B"/>
        <SolidColorBrush x:Key="LightRed" Color="#FFF0F0"/>
        <SolidColorBrush x:Key="LightGray" Color="#F5F7FA"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextColor" Color="#333333"/>
        <SolidColorBrush x:Key="GrayText" Color="#666666"/>

        <!-- Style TextBox Tìm kiếm -->
        <Style x:Key="SearchTextBoxContainerStyle" TargetType="{x:Type Border}">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Width" Value="500"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=txtSearch, Path=IsKeyboardFocusWithin}" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryRed}"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style Nút Hành động Chính -->
        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="15,0,30,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PrimaryRed}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="19" 
                                Padding="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style Nút Icon -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource GrayText}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryRed}"/>
                </Trigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style Nút Phân trang -->
        <Style x:Key="PaginationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="35"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="Foreground" Value="#999999"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="BorderBrush" Value="#999999"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style Căn giữa nội dung -->
        <Style x:Key="CenterTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Style Cell -->
        <Style x:Key="DataGridContentCellStyle" TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="BorderBrush" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Grid Background="{StaticResource LightGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <!-- Row cho Footer Phân trang -->
        </Grid.RowDefinitions>

        <!-- HEADER (ROW 0) -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="389*"/>
                <ColumnDefinition Width="141*"/>
            </Grid.ColumnDefinitions>
            <Border Background="White" CornerRadius="5" Padding="20" BorderBrush="{DynamicResource TextColor}" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                        <!-- Khung tìm kiếm -->
                        <Border Style="{DynamicResource SearchTextBoxContainerStyle}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Search" Width="14" Height="14" 
                                              Foreground="#999999" Margin="0,0,8,0" 
                                              VerticalAlignment="Center"/>
                                <TextBox x:Name="txtSearch" 
                                         TextChanged="txtSearch_TextChanged"
                                         Text="" 
                                         Width="350"
                                         BorderThickness="0" 
                                         Padding="0" 
                                         VerticalAlignment="Center"
                                         Foreground="{StaticResource GrayText}"
                                         Background="Transparent"/>
                            </StackPanel>
                        </Border>

                        <!-- Các nút hành động -->
                        <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                            <Button Click="BtnFilter_Click" Style="{DynamicResource PrimaryActionButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="Filter" Width="18" Margin="0,0,5,0" Foreground="White"/>
                                    <TextBlock Text="Lọc" Foreground="White" FontSize="15"/>
                                </StackPanel>
                            </Button>

                            <Button Click="BtnThem_Click" Style="{DynamicResource PrimaryActionButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="Plus" Width="18" Margin="0,0,5,0" Foreground="White"/>
                                    <TextBlock Text="Thêm" Foreground="White" FontSize="15"/>
                                </StackPanel>
                            </Button>

                            <Button Click="BtnXoa_Click" Style="{DynamicResource PrimaryActionButtonStyle}" Margin="0">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage Icon="TrashAlt" Width="16" Margin="0,0,5,0" Foreground="White"/>
                                    <TextBlock Text="Xóa" Foreground="White" FontSize="15"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Đã xóa phần phân trang cũ ở đây -->
                </Grid>
            </Border>
        </Grid>


        <!-- DATA GRID (ROW 1) -->
        <Border Grid.Row="1" Background="White" Margin="20,0,20,0" 
                CornerRadius="5,5,0,0" BorderThickness="0,0,0,1" BorderBrush="#EEE">
            <DataGrid x:Name="HocVienDataGrid"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      HeadersVisibility="Column"
                      BorderThickness="0"
                      Background="Transparent"
                      RowBackground="White"
                      GridLinesVisibility="None" 
                      CellStyle="{DynamicResource DataGridContentCellStyle}"
                      SelectionChanged="HocVienDataGrid_SelectionChanged">

                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Mã HV" Binding="{Binding MaHV}" Width="*" ElementStyle="{StaticResource CenterTextStyle}" FontWeight="SemiBold"/>
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                    <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh, StringFormat='dd-MM-yyyy'}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                    <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                    <DataGridTextColumn Header="SĐT" Binding="{Binding SDT}" Width="*" ElementStyle="{StaticResource CenterTextStyle}"/>
                    <DataGridTemplateColumn Header="Hành động" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- Nút Xem -->
                                    <Button Style="{DynamicResource IconButtonStyle}" ToolTip="Xem"
                        Click="BtnXem_Click" Tag="{Binding}">
                                        <fa:IconImage Icon="Eye" Width="14"/>
                                    </Button>

                                    <!-- Nút Sửa -->
                                    <Button Style="{DynamicResource IconButtonStyle}" ToolTip="Chỉnh sửa"
                        Click="BtnSua_Click" Tag="{Binding}">
                                        <fa:IconImage Icon="Edit" Width="14"/>
                                    </Button>

                                    <!-- Nút Xóa -->
                                    <Button Style="{DynamicResource IconButtonStyle}" ToolTip="Xóa"
                        Click="BtnXoaRow_Click" Tag="{Binding}">
                                        <fa:IconImage Icon="TrashAlt" Width="14"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Foreground" Value="{StaticResource GrayText}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                        <Setter Property="Padding" Value="10,10"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Height" Value="50"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryRed}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>

        <!-- FOOTER PHÂN TRANG (ROW 2) -->
        <Border Grid.Row="2" Background="#F9F9F9" Margin="20,0,20,20" 
                CornerRadius="0,0,5,5" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Chọn số bản ghi -->
                    <ColumnDefinition Width="*"/>
                    <!-- Thông tin trang -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Nút điều hướng -->
                </Grid.ColumnDefinitions>

                <!-- 1. Chọn số bản ghi -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Hiển thị:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#555"/>
                    <ComboBox x:Name="cboSoBanGhi" Width="60" SelectedIndex="0"
                              SelectionChanged="cboSoBanGhi_SelectionChanged"
                              VerticalContentAlignment="Center">
                        <sys:Int32>10</sys:Int32>
                        <sys:Int32>20</sys:Int32>
                        <sys:Int32>50</sys:Int32>
                        <sys:Int32>100</sys:Int32>
                    </ComboBox>
                </StackPanel>

                <!-- 2. Thông tin trang -->
                <TextBlock x:Name="txtThongTinPhanTrang" Grid.Column="1" 
                           Text="Hiển thị 1-50 của 1134 học viên" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                           Foreground="#555"/>

                <!-- 3. Nút điều hướng - SỬA LỖI ESCAPE KÝ TỰ -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="btnTrangDau" Content="&lt;&lt;" Click="btnTrangDau_Click" Style="{StaticResource PaginationButtonStyle}" ToolTip="Trang đầu"/>
                    <Button x:Name="btnTrangTruoc" Content="&lt;" Click="btnTrangTruoc_Click" Style="{StaticResource PaginationButtonStyle}" ToolTip="Trang trước"/>

                    <!-- Ô nhập số trang -->
                    <TextBox x:Name="txtTrangHienTai" Text="1" Width="40" Height="32" 
                             TextAlignment="Center" VerticalContentAlignment="Center"
                             Margin="5,0" KeyDown="txtTrangHienTai_KeyDown"/>
                    <TextBlock Text="/" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock x:Name="txtTongSoTrang" Text="23" VerticalAlignment="Center" Margin="0,0,5,0"/>

                    <Button x:Name="btnTrangSau" Content="&gt;" Click="btnTrangSau_Click" Style="{StaticResource PaginationButtonStyle}" ToolTip="Trang sau"/>
                    <Button x:Name="btnTrangCuoi" Content="&gt;&gt;" Click="btnTrangCuoi_Click" Style="{StaticResource PaginationButtonStyle}" ToolTip="Trang cuối"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Page>