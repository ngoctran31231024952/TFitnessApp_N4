<Page x:Class="TFitnessApp.HopDongPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TFitnessApp"
      xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1200"
      Title="HopDongPage"
      Background="White">

    <Page.Resources>
        <Style x:Key="CenteredColumnStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="TopActionButtonStyle" TargetType="Border">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#D32F2F" Offset="0.0"/>
                                <GradientStop Color="#E53935" Offset="0.5"/>
                                <GradientStop Color="#D32F2F" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="TextElement.Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip" Value="Xem chi tiết"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CustomDataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#F9F9F9"/>
                </Trigger>

                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FBEBEB"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>

                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#337AB7"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Padding" Value="10,0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Foreground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="15,15,15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#D32F2F" CornerRadius="5" Padding="20,10" VerticalAlignment="Center">
                <TextBlock Text="Danh sách hợp đồng" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
            </Border>

            <Border Grid.Column="1" Background="#E8E8E8" CornerRadius="20" Margin="15,0" Height="40" VerticalAlignment="Center">
                <Grid Margin="15,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="☰" FontSize="16" Foreground="#666" VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <TextBox Grid.Column="1" 
                             x:Name="SearchTextBox"
                             BorderThickness="0" 
                             Background="Transparent"
                             VerticalContentAlignment="Center"
                             FontSize="13"
                             Foreground="#999"
                             TextChanged="SearchTextBox_TextChanged"
                             GotFocus="SearchTextBox_GotFocus"
                             LostFocus="SearchTextBox_LostFocus">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Text" Value="Search text"/>
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="Text" Value=""/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBlock Grid.Column="2" Text="🔍" FontSize="16" Foreground="#666" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </Grid>
            </Border>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                <Border Style="{StaticResource TopActionButtonStyle}" MouseDown="CreateButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="➕" FontSize="14" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=TextElement.Foreground, FallbackValue=White}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Tạo hợp đồng" FontWeight="SemiBold" FontSize="13" VerticalAlignment="Center"
                                   Foreground="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=TextElement.Foreground, FallbackValue=White}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource TopActionButtonStyle}" MouseDown="RefreshButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔄" FontSize="14" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=TextElement.Foreground, FallbackValue=White}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Làm mới" FontWeight="SemiBold" FontSize="13" VerticalAlignment="Center"
                                   Foreground="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=TextElement.Foreground, FallbackValue=White}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource TopActionButtonStyle}" Margin="0,0,0,0" MouseDown="DeleteButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🗑" FontSize="14" Foreground="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=TextElement.Foreground, FallbackValue=White}" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Xóa" FontWeight="SemiBold" FontSize="13" VerticalAlignment="Center"
                                   Foreground="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=TextElement.Foreground, FallbackValue=White}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <DataGrid Grid.Row="1" 
                  x:Name="HopDongDataGrid" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  BorderThickness="0"
                  RowHeight="55"
                  Background="White"
                  Margin="15,15,15,15"
                  AlternationCount="2"
                  FontSize="13"
                  ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                  RowStyle="{StaticResource CustomDataGridRowStyle}">

            <DataGrid.Columns>
                <DataGridTemplateColumn Width="40">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <CheckBox x:Name="chkSelectAll" 
                                      ToolTip="Chọn tất cả"
                                      Checked="SelectAllCheckBox_Checked"
                                      Unchecked="SelectAllCheckBox_Checked"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      Checked="CheckBox_Checked"
                                      Unchecked="CheckBox_Unchecked"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Hành động" Width="90">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource ActionIconButtonStyle}" 
                                    Click="ViewDetailButton_Click" 
                                    Tag="{Binding MaHopDong}"
                                    HorizontalAlignment="Center">
                                <fa:IconImage Icon="Eye" Width="16" Height="16" Foreground="#666"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <DataGridTextColumn Header="Mã hợp đồng" Binding="{Binding MaHopDong}" Width="*" ElementStyle="{StaticResource CenteredColumnStyle}"/>

                <DataGridTextColumn Header="Tên học viên" Binding="{Binding TenHocVien}" Width="1.5*" ElementStyle="{StaticResource CenteredColumnStyle}"/>

                <DataGridTextColumn Header="Số điện thoại" Binding="{Binding SoDienThoai}" Width="*" ElementStyle="{StaticResource CenteredColumnStyle}"/>

                <DataGridTextColumn Header="Địa chỉ email" Binding="{Binding Email}" Width="1.8*" ElementStyle="{StaticResource CenteredColumnStyle}"/>

                <DataGridTextColumn Header="Chi nhánh" Binding="{Binding ChiNhanh}" Width="*" ElementStyle="{StaticResource CenteredColumnStyle}"/>

                <DataGridTextColumn Header="Thời hạn" Binding="{Binding ThoiHan}" Width="*" ElementStyle="{StaticResource CenteredColumnStyle}"/>

                <DataGridTemplateColumn Header="Giá trị" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding GiaTri}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Trạng thái" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border x:Name="StatusBorder" 
                                    CornerRadius="18" 
                                    Padding="18,6"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding TrangThai}" 
                                           Foreground="White"
                                           FontWeight="SemiBold"
                                           FontSize="12"
                                           TextAlignment="Center"/>
                            </Border>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding TrangThai}" Value="Còn hiệu lực">
                                    <Setter TargetName="StatusBorder" Property="Background" Value="#4CAF50"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TrangThai}" Value="Hết hiệu lực">
                                    <Setter TargetName="StatusBorder" Property="Background" Value="#D32F2F"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TrangThai}" Value="Đã hủy">
                                    <Setter TargetName="StatusBorder" Property="Background" Value="#9E9E9E"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>