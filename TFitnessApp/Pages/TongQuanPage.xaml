<Page x:Class="TFitnessApp.Pages.TongQuanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      Title="TongQuanPage" Loaded="Page_Loaded"
      Background="#F5F7FA">

    <Page.Resources>
        <ControlTemplate x:Key="ModernComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="25" />
                </Grid.ColumnDefinitions>

                <Border x:Name="Border" Grid.ColumnSpan="2" CornerRadius="1" 
                        Background="White" BorderBrush="#BDBDBD" BorderThickness="0.8" />

                <Path x:Name="Arrow" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                      Data="M 0 0 L 4 4 L 8 0" Stroke="#757575" StrokeThickness="1.5"
                      RenderTransformOrigin="0.5,0.5">
                    <Path.RenderTransform>
                        <RotateTransform Angle="0" />
                    </Path.RenderTransform>
                </Path>
            </Grid>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="Border" Property="BorderBrush" Value="#2196F3" />
                    <Setter TargetName="Arrow" Property="Stroke" Value="#2196F3" />
                    <Setter TargetName="Border" Property="Background" Value="#F5FAFF" />
                </Trigger>
                <Trigger Property="IsChecked" Value="true">
                    <Setter TargetName="Border" Property="BorderBrush" Value="#2196F3" />
                    <Setter TargetName="Border" Property="BorderThickness" Value="1.2" />
                    <Setter TargetName="Arrow" Property="Stroke" Value="#2196F3" />
                    <Setter TargetName="Arrow" Property="RenderTransform">
                        <Setter.Value>
                            <RotateTransform Angle="180" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Template="{StaticResource ModernComboBoxToggleButton}" 
                                          Grid.Column="2" Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"/>

                            <ContentPresenter IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="15,0,30,0"
                                              VerticalAlignment="Center" HorizontalAlignment="Left" />

                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True" 
                                      MinWidth="{TemplateBinding ActualWidth}" 
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Background="White" BorderThickness="1" BorderBrush="#E0E0E0" 
                                            CornerRadius="3" Margin="0,5,0,0">
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" />
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HoverItemStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Padding" Value="0,15"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">

            <Border Background="White" CornerRadius="5" Margin="0,0,0,20" ClipToBounds="True">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" Direction="270" ShadowDepth="4" Opacity="0.1" Color="#B0BEC5"/>
                </Border.Effect>

                <StackPanel>
                    <Grid Margin="25,20,25,15">
                        <TextBlock Text="KẾT QUẢ HOẠT ĐỘNG TRONG NGÀY" FontSize="16" FontWeight="Bold" 
                                   Foreground="Black" VerticalAlignment="Center"/>

                        <ComboBox x:Name="cboChiNhanh" Width="178" FontSize="14" Style="{StaticResource ModernComboBox}"
                                  DisplayMemberPath="TenCN" SelectedValuePath="MaCN"
                                  SelectionChanged="cboChiNhanh_SelectionChanged"
                                  VerticalAlignment="Center" HorizontalAlignment="Right" VerticalContentAlignment="Center"/>
                    </Grid>

                    <Line X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="#EEEEEE" StrokeThickness="1"/>

                    <Grid Height="100">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource HoverItemStyle}" Tag="DoanhThu" MouseLeftButtonDown="TheKPI_Click">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="50" Height="50" CornerRadius="25" Background="#E8F5E9">
                                    <fa:IconImage Icon="DollarSign" Foreground="#2E7D32" Width="15"/>
                                </Border>
                                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Doanh thu" Foreground="Black" FontSize="13" FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                        <TextBlock x:Name="txtDoanhThu" Text="0" FontWeight="ExtraBold" FontSize="20" Foreground="Black"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Line Grid.Column="1" X1="0" Y1="0" X2="0" Y2="1" Stretch="Fill" Stroke="#E0E0E0" 
                              StrokeThickness="0.8" StrokeDashArray="2 2" Margin="0,10"/>

                        <Border Grid.Column="2" Style="{StaticResource HoverItemStyle}" Tag="HocVien" MouseLeftButtonDown="TheKPI_Click">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="50" Height="50" CornerRadius="25" Background="#FFF3E0">
                                    <fa:IconImage Icon="UserPlus" Foreground="#EF6C00" Width="20"/>
                                </Border>
                                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Học viên mới" Foreground="Black" FontSize="13" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="txtHocVienMoi" Text="0" FontWeight="ExtraBold" FontSize="20" Foreground="Black" Margin="0,3,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Line Grid.Column="3" X1="0" Y1="0" X2="0" Y2="1" Stretch="Fill" Stroke="#E0E0E0" 
                              StrokeThickness="0.8" StrokeDashArray="2 2" Margin="0,10"/>

                        <Border Grid.Column="4" Style="{StaticResource HoverItemStyle}" Tag="CheckIn" MouseLeftButtonDown="TheKPI_Click">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="50" Height="50" CornerRadius="25" Background="#E3F2FD">
                                    <fa:IconImage Icon="CheckCircle" Foreground="#1565C0" Width="20"/>
                                </Border>
                                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Lượt check-in" Foreground="Black" FontSize="13" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="txtCheckIn" Text="0" FontWeight="ExtraBold" FontSize="20" Foreground="Black" Margin="0,3,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Line Grid.Column="5" X1="0" Y1="0" X2="0" Y2="1" Stretch="Fill" Stroke="#E0E0E0" 
                              StrokeThickness="0.8" StrokeDashArray="2 2" Margin="0,10"/>

                        <Border Grid.Column="6" Style="{StaticResource HoverItemStyle}" Tag="HetHan" MouseLeftButtonDown="TheKPI_Click">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="50" Height="50" CornerRadius="25" Background="#FFEBEE">
                                    <fa:IconImage Icon="ExclamationTriangle" Foreground="#C62828" Width="20"/>
                                </Border>
                                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Sắp hết hạn" Foreground="Black" FontSize="13" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="txtSapHetHan" Text="0" FontWeight="ExtraBold" FontSize="20" Foreground="Black" Margin="0,3,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="8" Margin="0,20,0,0" Padding="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Gray"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,20,20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="140"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="btnTabDoanhThu" Grid.Column="0" Background="Transparent" Cursor="Hand" 
                                    MouseLeftButtonDown="ChuyenBieuDo_Click" MouseEnter="TabBieuDo_MouseEnter" MouseLeave="TabBieuDo_MouseLeave">
                                <TextBlock x:Name="txtTabDoanhThu" Text="DOANH THU" FontSize="16" FontWeight="ExtraBold" 
                                           Foreground="#D32F2F" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="25,0,0,0"/>
                            </Border>

                            <Border x:Name="btnTabTyTrong" Grid.Column="1" Background="Transparent" Cursor="Hand" 
                                    MouseLeftButtonDown="ChuyenBieuDo_Click" MouseEnter="TabBieuDo_MouseEnter" MouseLeave="TabBieuDo_MouseLeave">
                                <TextBlock x:Name="txtTabTyTrong" Text="TỶ TRỌNG" FontSize="16" FontWeight="SemiBold" 
                                           Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <ComboBox x:Name="cboChartChiNhanh" Width="178" FontSize="14" Style="{StaticResource ModernComboBox}"
                                      DisplayMemberPath="TenCN" SelectedValuePath="MaCN" SelectionChanged="BoLocBieuDo_Changed"
                                      VerticalContentAlignment="Center" Margin="0,0,15,0"/>

                            <ComboBox x:Name="cboChartThoiGian" Width="150" FontSize="14" Style="{StaticResource ModernComboBox}"
                                      SelectionChanged="BoLocBieuDo_Changed" VerticalContentAlignment="Center" SelectedIndex="0">
                                <ComboBoxItem Content="7 ngày qua" Tag="7days"/>
                                <ComboBoxItem Content="Tháng này" Tag="thisMonth"/>
                                <ComboBoxItem Content="Tháng trước" Tag="lastMonth"/>
                                <ComboBoxItem Content="Năm nay" Tag="thisYear"/>
                                <ComboBoxItem Content="Năm trước" Tag="lastYear"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Line X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="#EEEEEE" StrokeThickness="1" VerticalAlignment="Bottom"/>
                        <Grid HorizontalAlignment="Left" Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="155"/>
                                <ColumnDefinition Width="130"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle x:Name="indDoanhThu" Grid.Column="0" Height="3" Fill="#D32F2F" VerticalAlignment="Bottom" Visibility="Visible"/>
                            <Rectangle x:Name="indTyTrong" Grid.Column="1" Height="3" Fill="#D32F2F" VerticalAlignment="Bottom" Visibility="Hidden"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="2" Margin="25,10,25,0">
                        <Grid x:Name="ColumnChartContainer">
                            <lvc:CartesianChart x:Name="ChartDoanhThu" Series="{Binding ChartSeries}" LegendLocation="None"
                                                DataHover="BieuDoCot_DataHover" Hoverable="True" MouseLeave="BieuDoCot_MouseLeave"
                                                DataTooltip="{x:Null}">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Labels="{Binding ChartLabels}" FontSize="15" Foreground="Black" FontWeight="Regular">
                                        <lvc:Axis.Separator>
                                            <lvc:Separator IsEnabled="False" Step="1"/>
                                        </lvc:Axis.Separator>
                                        <lvc:Axis.Sections>
                                            <lvc:AxisSection x:Name="HoverSection" Value="0" SectionWidth="1" Fill="#1AFFCDD2" Visibility="Hidden"/>
                                        </lvc:Axis.Sections>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisX>

                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis LabelFormatter="{Binding ChartFormatter}" FontSize="15" Foreground="Black" MinValue="0" Margin="0,0,20,0">
                                        <lvc:Axis.Separator>
                                            <lvc:Separator Stroke="#BDBDBD" StrokeThickness="0.2"/>
                                        </lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>

                            <Canvas IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <Border x:Name="ColumnTooltip" Visibility="Collapsed" Background="White"
                                        BorderBrush="#757575" BorderThickness="0.5" CornerRadius="4" Padding="8">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2" Color="Black"/>
                                    </Border.Effect>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock x:Name="txtColDate" FontWeight="Regular" FontSize="13" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="txtColMoney" FontSize="13" Foreground="Black" FontWeight="Regular" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Canvas>
                        </Grid>

                        <Grid x:Name="grpTyTrong" Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-40,0,0">
                                <Grid Width="280" Height="280" x:Name="ChartContainer" Background="Transparent" MouseMove="KhungBieuDoTron_MouseMove">
                                    <lvc:PieChart x:Name="ChartTyTrong" Series="{Binding PieSeries}" LegendLocation="None"
                                                  InnerRadius="90" Hoverable="True" DataTooltip="{x:Null}"
                                                  DataHover="BieuDoTron_DataHover" MouseLeave="BieuDoTron_MouseLeave"/>

                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                        <TextBlock x:Name="txtCenterTotal" Text="0" FontSize="22" FontWeight="ExtraBold" 
                                                   Foreground="#333" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <Canvas x:Name="TooltipCanvas" IsHitTestVisible="False" HorizontalAlignment="Stretch" 
                                            VerticalAlignment="Stretch" Background="Transparent">
                                        <Border x:Name="MouseTooltip" Visibility="Collapsed" Background="White"
                                                BorderBrush="#757575" BorderThickness="0.5" CornerRadius="2" Padding="8">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2" Color="Black"/>
                                            </Border.Effect>
                                            <StackPanel>
                                                <TextBlock x:Name="ttTitle" FontWeight="Bold" FontSize="14" Margin="0,0,0,3"/>
                                                <TextBlock x:Name="ttPercent" FontSize="13" Foreground="Black" Margin="0,0,0,1"/>
                                                <TextBlock x:Name="ttValue" FontSize="13" Foreground="Black" FontWeight="Bold"/>
                                            </StackPanel>
                                        </Border>
                                    </Canvas>
                                </Grid>

                                <ItemsControl ItemsSource="{Binding LegendList}" Margin="200,0,0,0" VerticalAlignment="Center">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,8">
                                                <Border Width="20" Height="20" CornerRadius="7.5" Background="{Binding Color}" Margin="0,1,10,0"/>
                                                <TextBlock Text="{Binding Title}" FontSize="16" Foreground="Black" FontWeight="Regular" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </Grid>

                    <StackPanel x:Name="pnlTotalBottom" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,20">
                        <TextBlock Text="Tổng doanh thu: " Foreground="Black" FontSize="15" FontWeight="Normal"/>
                        <TextBlock x:Name="txtChartTotal" Text="0 đ" FontWeight="Bold" FontSize="15" Foreground="Black"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Background="White" CornerRadius="8" Margin="0,20,0,20" Padding="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Gray"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,20,20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="330"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="btnTabCheckInChart" Grid.Column="0" Background="Transparent" Cursor="Hand" 
                                    MouseLeftButtonDown="ChuyenTabCheckIn_Click" Tag="Chart"
                                    MouseEnter="TabCheckIn_MouseEnter" MouseLeave="TabCheckIn_MouseLeave">
                                <TextBlock x:Name="txtTabCheckInChart" Text="LƯỢT CHECK-IN THEO KHUNG GIỜ" FontSize="16" FontWeight="ExtraBold" 
                                           Foreground="#D32F2F" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="25,0,0,0"/>
                            </Border>

                            <Border x:Name="btnTabCheckInList" Grid.Column="1" Background="Transparent" Cursor="Hand" 
                                    MouseLeftButtonDown="ChuyenTabCheckIn_Click" Tag="List"
                                    MouseEnter="TabCheckIn_MouseEnter" MouseLeave="TabCheckIn_MouseLeave">
                                <TextBlock x:Name="txtTabCheckInList" Text="DANH SÁCH CHECK-IN" FontSize="16" FontWeight="SemiBold" 
                                           Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <ComboBox x:Name="cboCheckInChiNhanh" Width="178" FontSize="14" Style="{StaticResource ModernComboBox}"
                                      DisplayMemberPath="TenCN" SelectedValuePath="MaCN"
                                      SelectionChanged="BoLocCheckIn_Changed" VerticalContentAlignment="Center" Margin="0,0,15,0"/>

                            <ComboBox x:Name="cboCheckInBuoi" Width="120" FontSize="14" Style="{StaticResource ModernComboBox}"
                                      SelectionChanged="BoLocCheckIn_Changed" VerticalContentAlignment="Center" SelectedIndex="0">
                                <ComboBoxItem Content="Cả ngày" Tag="CaNgay"/>
                                <ComboBoxItem Content="Buổi sáng" Tag="Sang"/>
                                <ComboBoxItem Content="Buổi chiều" Tag="Chieu"/>
                                <ComboBoxItem Content="Buổi tối" Tag="Toi"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Line X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="#EEEEEE" StrokeThickness="1" VerticalAlignment="Bottom"/>
                        <Grid HorizontalAlignment="Left" Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="330"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle x:Name="indCheckInChart" Grid.Column="0" Height="3" Fill="#D32F2F" VerticalAlignment="Bottom" Visibility="Visible"/>
                            <Rectangle x:Name="indCheckInList" Grid.Column="1" Height="3" Fill="#D32F2F" VerticalAlignment="Bottom" Visibility="Hidden"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="2" Margin="25,0,25,0">
                        <lvc:CartesianChart x:Name="ChartCheckInLine" Series="{Binding CheckInSeries}" LegendLocation="None"
                                            DataHover="BieuDoCheckIn_DataHover" MouseLeave="BieuDoCheckIn_MouseLeave"
                                            Hoverable="True" DataTooltip="{x:Null}">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Labels="{Binding CheckInLabels}" FontSize="14" Foreground="Black">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator IsEnabled="False" Step="1"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis MinValue="0" LabelFormatter="{Binding ChartFormatter}" FontSize="14" Foreground="Black">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1" Stroke="#BDBDBD" StrokeThickness="0.2"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>

                        <Canvas IsHitTestVisible="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Border x:Name="CheckInTooltip" Visibility="Collapsed" Background="White"
                                    BorderBrush="#757575" BorderThickness="0.5" CornerRadius="4" Padding="10">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2" Color="Black"/>
                                </Border.Effect>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="txtCheckInTime" FontWeight="Regular" FontSize="13" Margin="0,0,0,3" HorizontalAlignment="Left"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <TextBlock Text="Lượt check-in: " FontSize="13" Foreground="Black" FontWeight="Regular"/>
                                        <TextBlock x:Name="txtCheckInNumber" FontSize="13" Foreground="Black" FontWeight="Bold"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Canvas>

                        <DataGrid x:Name="GridCheckInList" Visibility="Collapsed"
                                  AutoGenerateColumns="False" IsReadOnly="True"
                                  GridLinesVisibility="None" HeadersVisibility="Column"
                                  Background="White" BorderThickness="0"
                                  RowHeight="40" ColumnHeaderHeight="45"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="FontSize" Value="15"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#EEE"/>
                                    <Setter Property="Padding" Value="10,0"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="10,0"/>
                                    <Setter Property="BorderBrush" Value="#BDBDBD"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,0.2"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" 
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Mã học viên" Binding="{Binding MaHV}" Width="180"/>
                                <DataGridTextColumn Header="Họ và tên" Binding="{Binding HoTen}" Width="250"/>
                                <DataGridTextColumn Header="Gói tập" Binding="{Binding TenGoi}" Width="290"/>
                                <DataGridTextColumn Header="Giờ vào" Binding="{Binding GioVao}" Width="150"/>
                                <DataGridTextColumn Header="Giờ ra" Binding="{Binding GioRa}" Width="150"/>
                                <DataGridTextColumn Header="Ngày" Binding="{Binding Ngay}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                        <StackPanel x:Name="pnlTotalCheckInChart" Orientation="Horizontal" Visibility="Visible">
                            <TextBlock Text="Tổng lượng check-in: " Foreground="Black" FontSize="15" FontWeight="Normal"/>
                            <TextBlock x:Name="txtTotalCheckInChart" Text="0" FontWeight="Bold" FontSize="15" Foreground="Black"/>
                        </StackPanel>
                        <TextBlock x:Name="txtTotalCheckInList" Text="Đang hiện diện: 0" FontWeight="Bold" FontSize="14" Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Margin="0,0,0,20" Height="330">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="8" ClipToBounds="True">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Gray"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="20,20,20,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="TOP GÓI TẬP" FontSize="16" FontWeight="ExtraBold" 
                                       Foreground="#D32F2F" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <ComboBox x:Name="cboTopGoiTapTime" Width="130" FontSize="14" Style="{StaticResource ModernComboBox}"
                                          SelectionChanged="TopGoiTap_FilterChanged" VerticalContentAlignment="Center" SelectedIndex="0">
                                    <ComboBoxItem Content="7 ngày qua" Tag="7days"/>
                                    <ComboBoxItem Content="Tháng này" Tag="thisMonth"/>
                                    <ComboBoxItem Content="Tháng trước" Tag="lastMonth"/>
                                    <ComboBoxItem Content="Năm nay" Tag="thisYear"/>
                                    <ComboBoxItem Content="Năm trước" Tag="lastYear"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <Border Grid.Row="1" Height="1" Background="#EEEEEE" VerticalAlignment="Top"/>

                        <ItemsControl Grid.Row="2" x:Name="ListTopGoiTap" Margin="20,15,20,20">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Width="30" Height="30" CornerRadius="15" Background="{Binding Color}" Margin="0,0,15,0">
                                            <TextBlock Text="{Binding Rank}" Foreground="White" FontWeight="Bold" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <TextBlock Grid.Column="1" Text="{Binding TenGoi}" FontWeight="Bold" 
                                                   VerticalAlignment="Center" FontSize="14" TextTrimming="CharacterEllipsis"/>

                                        <TextBlock Grid.Column="2" Text="{Binding SoLuong}" FontWeight="Bold" 
                                                   VerticalAlignment="Center" FontSize="16"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <Border Grid.Column="2" Background="White" CornerRadius="8" ClipToBounds="True">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Gray"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="20,20,20,15" MinHeight="30">
                            <TextBlock Text="HOẠT ĐỘNG GẦN ĐÂY" FontSize="16" FontWeight="ExtraBold" 
                                       Foreground="#D32F2F" VerticalAlignment="Center"/>
                        </Grid>

                        <Border Grid.Row="1" Height="1" Background="#EEEEEE" VerticalAlignment="Top"/>

                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,0,2,5">
                            <ItemsControl x:Name="ListHoatDong" Margin="20,15,20,20">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0" Width="20" Margin="0,0,10,0">
                                                <Border Width="1" Background="#FFCDD2" HorizontalAlignment="Center" Margin="0,5,0,-5"/>
                                                <Border Width="8" Height="8" CornerRadius="4" Background="#D32F2F" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,6,0,0"/>
                                            </Grid>

                                            <StackPanel Grid.Column="1" Margin="0,0,0,20">
                                                <TextBlock TextWrapping="Wrap" FontSize="14" LineHeight="20">
                                                    <Run Text="{Binding NguoiThucHien}" FontWeight="SemiBold"/>
                                                    <Run Text="{Binding HanhDong}" Foreground="#555"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding ThoiGian}" FontSize="12" Foreground="Gray" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>