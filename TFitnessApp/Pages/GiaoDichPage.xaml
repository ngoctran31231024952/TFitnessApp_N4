<Page x:Class="TFitnessApp.GiaoDichPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TFitnessApp"
      xmlns:utility="clr-namespace:TFitnessApp.Utilities"
      xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp" 
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="GiaoDichPage">

    <Page.Resources>
        <!-- CONVERTER DÙNG CHO PLACEHOLDER TEXTBOX -->
        <utility:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <!-- Style các nút -->
        <Style x:Key="RoundButtonControlTemplate" TargetType="Button">
            <Setter Property="Background" Value="#C71A1B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- CornerRadius mặc định 5, sẽ bị ghi đè nếu cần -->
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A51617"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ĐÃ XÓA STYLE ListButtonCornerStyle VÌ NÚT NÀY KHÔNG CÒN LÀ BUTTON NỮA -->

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundButtonControlTemplate}"/>
        <Style x:Key="ExportButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundButtonControlTemplate}">
            <Setter Property="Background" Value="#C71A1B"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Style cho Header của DataGrid -->
        <Style x:Key="CenteredHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="10,10,10,10"/>
            <Setter Property="Background" Value="#E1E0E7"/>
            <Setter Property="BorderBrush" Value="#E1E0E7"/>
            <Setter Property="BorderThickness" Value="1,1,1,0"/>
        </Style>

        <!-- Style cho Dòng DataGrid (Highlight) -->
        <Style x:Key="CustomRowStyle" TargetType="{x:Type DataGridRow}">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFDDDD"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho Tab/Radio Buttons để mô phỏng dải phân đoạn (Segmented Control) -->
        <Style x:Key="PaymentTabStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,15,10,10"/>
            <Setter Property="GroupName" Value="PaymentStatus"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Background="{TemplateBinding Background}">
                            <!-- Nội dung Tab (Header) -->
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Content="{TemplateBinding Content}"
                                              Margin="{TemplateBinding Padding}"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                            <!-- Đường gạch chân khi được chọn -->
                            <Border x:Name="Underline" Height="3" VerticalAlignment="Bottom" Background="Transparent" Margin="0,0,-1,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Underline" Property="Background" Value="#C71A1B"/>
                                <Setter Property="Foreground" Value="#333"/>
                                <!-- Màu chữ khi được chọn -->
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#C71A1B"/>
                                <!-- Màu chữ khi hover -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style để căn giữa nội dung DataGrid Cell (Chỉ sử dụng cho cột DataGridTextColumn) -->
        <Style x:Key="CenteredContentStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 0: Chức năng chính: Danh sách, Tìm kiếm, Tạo GD, Làm mới -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Thanh trạng thái (Chưa TT, TT một phần, Đã TT) -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: Vị trí cũ của nút Xóa/Xuất (Giờ trống hoặc dùng cho Pagination/Header DataGrid nếu cần) -->
            <RowDefinition Height="*"/>
            <!-- Row 3: DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Row 4: Nút Xóa/Xuất (MỚI) -->
        </Grid.RowDefinitions>

        <!-- ROW 0: CHỨC NĂNG CHÍNH -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Column 0: Cho Khối Danh Sách (Width="Auto") -->
                <ColumnDefinition Width="*"/>
                <!-- Column 1: Cho Thanh tìm kiếm (Width="*") -->
                <ColumnDefinition Width="120"/>
                <!-- Column 2: Cho Nút Tạo Giao Dịch (Width="Auto") -->
                <ColumnDefinition Width="100"/>
                <!-- Column 3: Cho Nút Làm Mới (Width="Auto") -->
            </Grid.ColumnDefinitions>

            <!-- KHỐI THÔNG TIN DANH SÁCH GIAO DỊCH -->
            <Border Grid.Column="0" CornerRadius="0,20,20,0" Margin="0,0,10,0" Background="#C71A1B">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Direction="270" Color="#000000" Opacity="0.2" BlurRadius="5"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <!-- Thanh Indicator nhỏ bên trái (viền đen) -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Thanh Indicator nhỏ bên trái (Màu đen/xám đậm) -->
                    <Border Grid.Column="0" Background="#4B1718" Margin="-5,0,0,0"/>

                    <!-- TextBlock thông tin -->
                    <TextBlock Grid.Column="1" Text="Danh sách Giao dịch" 
                               Padding="20,10" 
                               FontWeight="SemiBold" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontSize="14"/>
                </Grid>
            </Border>

            <!-- Thanh tìm kiếm -->
            <Border Grid.Column="1" CornerRadius="8" Background="#ECECEC" Height="40" VerticalAlignment="Center" Margin="0,0,10,0"
                    BorderBrush="#CCCCCC" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Direction="270" Color="#000000" Opacity="0.2" BlurRadius="5"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- TextBox và Placeholder Text (Grid Column 0) -->
                    <Grid Grid.Column="0" Margin="10,0,0,0">
                        <TextBox x:Name="SearchTextBox" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 BorderThickness="0" 
                                 Background="Transparent" 
                                 VerticalContentAlignment="Center" 
                                 Foreground="#333" 
                                 Padding="0"/>
                        <!-- Placeholder Text: Sử dụng Converter -->
                        <TextBlock IsHitTestVisible="False" 
                                   Text="Tìm kiếm học viên" 
                                   VerticalAlignment="Center" 
                                   Foreground="#999"
                                   FontStyle="Italic"
                                   Visibility="{Binding Text, ElementName=SearchTextBox, Converter={StaticResource StringToVisibilityConverter}}"/>
                    </Grid>

                    <!-- Icon Kính Lúp (SỬ DỤNG FONT AWESOME SHARP) -->
                    <Button Grid.Column="1" Command="{Binding SearchCommand}" Background="Transparent" BorderThickness="0" Padding="0" Width="40" Height="40">
                        <Viewbox Width="16" Height="16" Margin="0,0,10,0">
                            <fa:IconImage Icon="Search" Foreground="#666" />
                        </Viewbox>
                    </Button>
                </Grid>
            </Border>

            <!-- Nút Tạo Giao dịch -->
            <Border Grid.Column="2" CornerRadius="5" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Direction="270" Color="#000000" Opacity="0.2" BlurRadius="5"/>
                </Border.Effect>
                <Button Command="{Binding AddTransactionCommand}" Style="{StaticResource RoundButtonControlTemplate}" Padding="20,10" FontWeight="SemiBold" Height="40" VerticalAlignment="Top" Click="Button_Click">
                    <StackPanel Orientation="Horizontal">
                        <!-- Icon CirclePlus -->
                        <fa:IconImage Icon="CirclePlus" Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="Tạo Giao dịch" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>

            <!-- Nút Làm mới -->
            <Border Grid.Column="3" CornerRadius="5">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" Direction="270" Color="#000000" Opacity="0.2" BlurRadius="5"/>
                </Border.Effect>
                <Button Command="{Binding RefreshCommand}" Style="{StaticResource RoundButtonControlTemplate}" Padding="20,10" FontWeight="SemiBold">
                    <StackPanel Orientation="Horizontal">
                        <!-- Icon Refresh -->
                        <fa:IconImage Icon="ArrowsRotate" Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="Làm mới" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Border>

        </Grid>

        <!-- ROW 1: Thanh trạng thái (Chưa TT, TT một phần, Đã TT) -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Border BorderBrush="#D0D0D0" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <RadioButton Grid.Column="0" Content="Chưa thanh toán" Style="{StaticResource PaymentTabStyle}"/>
                    <RadioButton Grid.Column="1" Content="Thanh toán một phần" Style="{StaticResource PaymentTabStyle}" IsChecked="True"/>
                    <RadioButton Grid.Column="2" Content="Đã thanh toán" Style="{StaticResource PaymentTabStyle}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- ROW 2: Header cho DataGrid (ĐÃ BỎ NỘI DUNG NÚT XÓA/XUẤT CŨ) -->
        <!-- Đặt Row 2 vào đây để giữ cấu trúc RowDefinitions không bị thay đổi chỉ vì Row 2 không dùng nữa -->
        <Grid Grid.Row="2" Height="0"/>

        <!-- ROW 3: DataGrid (Danh sách Giao dịch) -->
        <Border Grid.Row="3" 
                CornerRadius="10" 
                BorderBrush="#E1E0E7" 
                BorderThickness="4" 
                Background="White"
                ClipToBounds="True"
                Margin="0,0,0,10">
            <!-- Thêm Margin dưới để cách nút Xóa/Xuất mới -->
            <DataGrid x:Name="dgGiaoDich"
                  ItemsSource="{Binding Transactions}" 
                  SelectedItem="{Binding SelectedTransaction}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  RowHeaderWidth="0"
                  HeadersVisibility="Column"
                  BorderThickness="1"
                  BorderBrush="#CCCCCC"
                  RowStyle="{StaticResource CustomRowStyle}"
                  ColumnHeaderStyle="{StaticResource CenteredHeaderStyle}" Margin="-1,0,-1,0">

                <DataGrid.Columns>
                    <!-- Cột 1: Checkbox + View Icon (Mắt) -->
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox/>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- Checkbox -->
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <!-- View Icon (Mắt) (SỬ DỤNG FONT AWESOME SHARP) -->
                                    <Button Background="Transparent" BorderThickness="0" Padding="0" Command="{Binding DataContext.ViewTransactionCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding}">
                                        <!-- ĐÃ SỬA LỖI: Bọc IconImage trong Viewbox -->
                                        <Viewbox Width="14" Height="14">
                                            <fa:IconImage Icon="Eye" Foreground="#666" VerticalAlignment="Center"/>
                                        </Viewbox>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Các cột dữ liệu (Giả định Binding) -->
                    <DataGridTextColumn Header="Mã GD" Binding="{Binding MaGD}" Width="0.5*" ElementStyle="{StaticResource CenteredContentStyle}" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                    <DataGridTextColumn Header="Mã HV" Binding="{Binding MaHV}" Width="0.5*" ElementStyle="{StaticResource CenteredContentStyle}" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                    <DataGridTextColumn Header="Mã Gói" Binding="{Binding MaGoi}" Width="0.5*" ElementStyle="{StaticResource CenteredContentStyle}" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                    <DataGridTextColumn Header="Mã TK" Binding="{Binding MaTK}" Width="0.5*" ElementStyle="{StaticResource CenteredContentStyle}" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                    <DataGridTextColumn Header="Tổng Tiền" Binding="{Binding TongTien, StringFormat='N0'}" Width="0.8*" ElementStyle="{StaticResource CenteredContentStyle}" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                    <DataGridTextColumn Header="Đã Thanh Toán" Binding="{Binding DaThanhToan, StringFormat='N0'}" Width="0.8*" ElementStyle="{StaticResource CenteredContentStyle}" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                    <DataGridTextColumn Header="Số Tiền Nợ" Binding="{Binding SoTienNo, StringFormat='N0'}" Width="0.8*" ElementStyle="{StaticResource CenteredContentStyle}" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                    <DataGridTextColumn Header="Ngày GD" Binding="{Binding NgayGD, StringFormat='dd-MM-yyyy HH:mm'}" Width="*" ElementStyle="{StaticResource CenteredContentStyle}" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>

                    <!-- Cột Trạng Thái (Status) với màu sắc -->
                    <DataGridTemplateColumn Header="Trạng Thái" Width="0.7*" HeaderStyle="{StaticResource CenteredHeaderStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <!-- Đã thêm Border và Padding để mô phỏng thẻ trạng thái (badge) -->
                                <Border CornerRadius="4" Padding="8,3" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TrangThai}" FontWeight="SemiBold" FontSize="12">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <!-- Màu Cam/Đỏ nhạt cho trạng thái Trả một phần/Chưa thanh toán -->
                                                    <DataTrigger Binding="{Binding TrangThai}" Value="Thanh toán một phần">
                                                        <Setter Property="Foreground" Value="#FF7F00"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding TrangThai}" Value="Chưa thanh toán">
                                                        <Setter Property="Foreground" Value="#C71A1B"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding TrangThai}" Value="Đã thanh toán">
                                                        <Setter Property="Foreground" Value="#10B981"/>
                                                        <!-- Màu xanh lá đậm hơn cho "Đã thanh toán" -->
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TrangThai}" Value="Thanh toán một phần">
                                                    <Setter Property="Background" Value="#FFF7ED"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding TrangThai}" Value="Chưa thanh toán">
                                                    <Setter Property="Background" Value="#FEEAE9"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding TrangThai}" Value="Đã thanh toán">
                                                    <Setter Property="Background" Value="#D1FAE5"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- ROW 4: Nút Xóa và Xuất (ĐÃ DI CHUYỂN VÀ CĂN GIỮA) -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Command="{Binding DeleteTransactionCommand}" Style="{StaticResource DeleteButtonStyle}" Height="38" Width="100">
                <StackPanel Orientation="Horizontal">
                    <!-- Icon Xóa (Trash) -->
                    <Viewbox Width="14" Height="14" Margin="0,0,5,0" VerticalAlignment="Center">
                        <fa:IconImage Icon="Trash" Foreground="White"/>
                    </Viewbox>
                    <TextBlock Text="Xóa" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
            <Button Command="{Binding ExportTransactionCommand}" Margin="10,0,0,0" Style="{StaticResource ExportButtonStyle}" Width="100" Height="38">
                <StackPanel Orientation="Horizontal">
                    <!-- Icon Xuất (Upload) -->
                    <Viewbox Width="14" Height="14" Margin="0,0,5,0" VerticalAlignment="Center">
                        <fa:IconImage Icon="Upload" Foreground="White"/>
                    </Viewbox>
                    <TextBlock Text="Xuất" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </StackPanel>

    </Grid>
</Page>