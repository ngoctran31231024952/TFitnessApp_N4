<Window x:Class="TFitnessApp.Windows.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFitnessApp.Windows"
        xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Thêm Tài khoản mới"
        Height="400" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <!-- Style cho RoundButtonControlTemplate (Màu đỏ chủ đề) -->
        <Style x:Key="RoundButtonControlTemplate" TargetType="Button">
            <Setter Property="Background" Value="#C71A1B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A51617"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho Nút Đóng (X) trên Header màu đỏ -->
        <Style x:Key="CloseWindowButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#A51617"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Data cho ComboBox Phân quyền -->
        <x:Array x:Key="PhanQuyenList" Type="{x:Type sys:String}">
            <sys:String>Nhân Viên</sys:String>
            <sys:String>Quản Trị Viên</sys:String>
        </x:Array>

        <!-- Data cho ComboBox Trạng thái -->
        <x:Array x:Key="TrangThaiList" Type="{x:Type sys:String}">
            <sys:String>Hoạt Động</sys:String>
            <sys:String>Bị Khóa</sys:String>
        </x:Array>

        <!-- Style cho Label Field -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Style cho Input TextBox -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Style cho ComboBox -->
        <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
        </Style>

    </Window.Resources>

    <Border CornerRadius="10" Background="White" BorderBrush="#C71A1B" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0" Background="#C71A1B" Height="50" MouseDown="Header_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Thêm Tài khoản mới" 
                           Foreground="White" FontWeight="Bold" FontSize="18"
                           VerticalAlignment="Center" Margin="20,0,0,0"/>

                <Button x:Name="btnClose" Grid.Column="1" Click="btnClose_Click" Background="Transparent" BorderThickness="0" 
                        Width="50" Cursor="Hand" Style="{DynamicResource CloseWindowButtonStyle}">
                    <fa:IconImage Icon="Xmark" Width="16" Height="16" Foreground="White"/>
                </Button>
            </Grid>

            <!-- NỘI DUNG FORM -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- DÒNG 1: Họ tên -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Họ tên:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtHoTen" Text="{Binding HoTen, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputTextBoxStyle}"/>
                    </StackPanel>

                    <!-- DÒNG 1: Tên đăng nhập -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Tên đăng nhập:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtTenDangNhap" Text="{Binding TenDangNhap, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputTextBoxStyle}"/>
                    </StackPanel>

                    <!-- DÒNG 2: Email -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Email:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtEmail" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputTextBoxStyle}"/>
                    </StackPanel>

                    <!-- DÒNG 2: Số điện thoại -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Số điện thoại:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtSoDienThoai" Text="{Binding SDT, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputTextBoxStyle}"/>
                    </StackPanel>

                    <!-- DÒNG 3: Phân quyền -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Phân quyền:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="cboPhanQuyen" 
                                  ItemsSource="{StaticResource PhanQuyenList}"
                                  SelectedItem="{Binding PhanQuyen}"
                                  Style="{StaticResource InputComboBoxStyle}"/>
                    </StackPanel>

                    <!-- DÒNG 3: Trạng thái -->
                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Trạng thái:" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="cboTrangThai" 
                                  ItemsSource="{StaticResource TrangThaiList}"
                                  SelectedItem="{Binding TrangThai}"
                                  Style="{StaticResource InputComboBoxStyle}"/>
                    </StackPanel>

                </Grid>
            </ScrollViewer>

            <!-- FOOTER -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,20">
                <Button x:Name="btnTao" Click="TaoTaiKhoanButton_Click" 
                        Style="{DynamicResource RoundButtonControlTemplate}" 
                        Padding="30,10" FontWeight="Bold">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Plus" Width="18" Height="18" Margin="10,0,5,0" Foreground="White"/>
                        <TextBlock Text="Tạo" Margin="0,0,0,0" FontSize="20" Width="45"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>