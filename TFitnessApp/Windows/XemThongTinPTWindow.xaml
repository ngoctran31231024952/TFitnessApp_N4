<Window x:Class="TFitnessApp.Windows.XemThongTinPTWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Thông tin PT" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" FontFamily="Lato">

    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A01516"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <Style x:Key="InfoValueTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#000"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#999"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Padding" Value="0,0,0,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#C71A1B" CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock Text="XEM THÔNG TIN PT" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0" Style="{StaticResource CloseButtonStyle}" Click="BtnDong_Click">
                        <fa:IconImage Icon="Times" Width="14" Foreground="White"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Body -->
            <Grid Grid.Row="1" Margin="40,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Mã PT" Style="{StaticResource InfoLabelStyle}"/>
                        <Border Grid.Column="1" Background="#E0E0E0" CornerRadius="0" HorizontalAlignment="Left">
                            <TextBlock x:Name="txtMaPT" Text="PTxxxx" Padding="10,5" FontWeight="Bold" Foreground="#333"/>
                        </Border>
                    </Grid>

                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Họ tên PT" Style="{StaticResource InfoLabelStyle}"/>
                        <TextBox Grid.Column="1" x:Name="txtHoTen" Text="Tên PT" Style="{StaticResource InfoValueTextBoxStyle}"/>
                    </Grid>

                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Chi nhánh" Style="{StaticResource InfoLabelStyle}"/>
                        <TextBox Grid.Column="1" x:Name="txtChiNhanh" Text="Chi nhánh" Style="{StaticResource InfoValueTextBoxStyle}"/>
                    </Grid>

                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Giới tính" Style="{StaticResource InfoLabelStyle}"/>
                        <TextBox Grid.Column="1" x:Name="txtGioiTinh" Text="Nam" Style="{StaticResource InfoValueTextBoxStyle}" Width="80" HorizontalAlignment="Left"/>
                    </Grid>

                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Email" Style="{StaticResource InfoLabelStyle}"/>
                        <TextBox Grid.Column="1" x:Name="txtEmail" Text="email" Style="{StaticResource InfoValueTextBoxStyle}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="SĐT" Style="{StaticResource InfoLabelStyle}"/>
                        <TextBox Grid.Column="1" x:Name="txtSDT" Text="sđt" Style="{StaticResource InfoValueTextBoxStyle}"/>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Top">
                    <TextBlock Text="Ảnh PT" Foreground="#666" FontSize="13" Margin="0,0,0,10"/>
                    <Border Width="180" Height="200" BorderBrush="#EEE" BorderThickness="1" CornerRadius="5" Background="#F9F9F9">
                        <Grid>
                            <fa:IconImage Icon="User" Foreground="#DDD" Height="80" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <Image x:Name="imgAvatar" Stretch="UniformToFill"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button Content="Đóng" Click="BtnDong_Click" Width="120" Height="40" Background="#C71A1B" Foreground="White" FontWeight="Bold" FontSize="14" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>