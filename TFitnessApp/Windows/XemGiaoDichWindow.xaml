<Window x:Class="TFitnessApp.Windows.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFitnessApp.Windows"
        xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Chi tiết Giao dịch"
        Height="650" Width="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <!-- Style cho RoundButtonControlTemplate (Màu đỏ chủ đề) -->
        <Style x:Key="RoundButtonControlTemplate" TargetType="Button">
            <Setter Property="Background" Value="#C71A1B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A51617"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho Nút Đóng (X) trên Header màu đỏ -->
        <Style x:Key="CloseWindowButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#A51617"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Data cho ComboBox Phương thức thanh toán -->
        <x:Array x:Key="PaymentMethods" Type="{x:Type sys:String}">
            <sys:String>Tiền mặt</sys:String>
            <sys:String>Chuyển khoản</sys:String>
            <sys:String>Thẻ</sys:String>
        </x:Array>

        <!-- Data cho ComboBox Trạng thái -->
        <x:Array x:Key="PaymentStatuses" Type="{x:Type sys:String}">
            <sys:String>Chưa Thanh Toán</sys:String>
            <sys:String>Trả Một Phần</sys:String>
            <sys:String>Đã Thanh Toán</sys:String>
        </x:Array>

    </Window.Resources>

    <Border CornerRadius="10" Background="White" BorderBrush="#C71A1B" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0" Background="#C71A1B" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Chi tiết Giao dịch" 
                        Foreground="White" FontWeight="Bold" FontSize="18"
                        VerticalAlignment="Center" Margin="20,0,0,0"/>

                <Button x:Name="btnClose" Grid.Column="1" Click="btnClose_Click" Background="Transparent" BorderThickness="0" 
                    Width="50" Cursor="Hand" Style="{DynamicResource CloseWindowButtonStyle}">
                    <fa:IconImage Icon="Xmark" Width="16" Height="16" Foreground="White"/>
                </Button>
            </Grid>

            <!-- NỘI DUNG FORM -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- DÒNG 1: Mã giao dịch / Ngày giao dịch -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Mã giao dịch:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtMaGD" Text="{Binding MaGD}" 
                                Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Ngày giao dịch:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <DatePicker x:Name="dpNgayGD" SelectedDate="{Binding NgayGD}" 
                                Width="300" Height="30" 
                                Padding="5,0" BorderThickness="1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- DÒNG 2: Mã học viên / Họ tên học viên -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Mã học viên:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtMaHocVien" Text="{Binding MaHV}" 
                                Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Họ tên học viên:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtHoTenHocVien" Text="{Binding HoTenHocVien}" 
                                Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                    </StackPanel>

                    <!-- DÒNG 3: Mã gói tập / Tên gói tập -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Mã gói tập:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtMaGoiTap" Text="{Binding MaGoi}" 
                                Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Tên gói tập:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtTenGoiTap" Text="{Binding TenGoiTap}" 
                                Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                    </StackPanel>

                    <!-- DÒNG 4: Mã nhân viên / Họ tên nhân viên -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Mã nhân viên:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtMaNhanVien" Text="{Binding MaTK}" 
                                Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Họ tên nhân viên:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtHoTenNhanVien" Text="{Binding HoTenNhanVien}" 
                                Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                    </StackPanel>

                    <!-- DÒNG 5: Tổng tiền / Đã thanh toán -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Tổng tiền:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtTongTien" Text="{Binding TongTien}" 
                                Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Đã thanh toán:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtDaThanhToan" Text="{Binding DaThanhToan}" 
                                Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- DÒNG 6: Số tiền nợ / Phương thức thanh toán (Đã sửa Margin để tránh overlap) -->
                    <StackPanel Grid.Row="5" Grid.Column="0" Margin="0,0,15,30">
                        <TextBlock Text="Số tiền nợ:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtSoTienNo" Text="{Binding SoTienNo}" 
                                Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                    </StackPanel>

                    <StackPanel Grid.Row="5" Grid.Column="1" Margin="15,0,0,30">
                        <TextBlock Text="Phương thức thanh toán:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cbPhuongThuc" ItemsSource="{StaticResource PaymentMethods}"
                                SelectedItem="{Binding PhuongThuc}" 
                                Width="300" Height="30" Padding="5,0" 
                                BorderThickness="1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsEnabled="False"/>
                    </StackPanel>

                    <!-- DÒNG 7: Trạng thái (Đã sửa Margin) -->
                    <StackPanel Grid.Row="6" Grid.Column="0" Margin="0,0,15,0">
                        <TextBlock Text="Trạng thái:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cbTrangThai" ItemsSource="{StaticResource PaymentStatuses}"
                                SelectedItem="{Binding TrangThai}" 
                                Width="300" Height="30" Padding="5,0" 
                                BorderThickness="1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                    </StackPanel>

                </Grid>
            </ScrollViewer>

            <!-- FOOTER với các nút chức năng (Đã đồng bộ màu đỏ) -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,548,0,20" Width="285">
                <Button x:Name="btnSua" Click="btnSua_Click" 
                    Style="{DynamicResource RoundButtonControlTemplate}" 
                    Padding="20,10" FontWeight="Bold" Margin="10,0" Width="75">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Edit" Width="16" Height="16" Margin="5,0,5,0" Foreground="White"/>
                        <TextBlock Text="Sửa" FontSize="16"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnXoa" Click="btnXoa_Click" 
                    Style="{DynamicResource RoundButtonControlTemplate}" 
                    Padding="20,10" FontWeight="Bold" Margin="10,0" Width="75">
                    <!-- Đã bỏ thuộc tính Background="#DC3545" để dùng màu đỏ chủ đề từ Style -->
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Trash" Width="16" Height="16" Margin="5,0,5,0" Foreground="White"/>
                        <TextBlock Text="Xóa" FontSize="16"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnXuat" Click="btnXuat_Click" 
                    Style="{DynamicResource RoundButtonControlTemplate}" 
                    Padding="20,10" FontWeight="Bold" Margin="10,0" RenderTransformOrigin="0.517,0.507" Width="75">
                    <!-- Đã bỏ thuộc tính Background="#28A745" để dùng màu đỏ chủ đề từ Style -->
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Upload" Width="16" Height="16" Margin="5,0,5,0" Foreground="White"/>
                        <TextBlock Text="Xuất" FontSize="16"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>