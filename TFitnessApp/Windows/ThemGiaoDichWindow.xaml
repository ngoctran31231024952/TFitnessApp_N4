<Window x:Class="TFitnessApp.Windows.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFitnessApp.Windows" 
        xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        mc:Ignorable="d"
        Title="Tạo Giao dịch mới" 
        Height="550" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <!-- d:DataContext="{d:DesignInstance vm:ThemGiaoDichViewModel}" -->

    <Border CornerRadius="10" Background="White" BorderBrush="#C71A1B" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header (Tiêu đề + Nút Đóng) -->
                <RowDefinition Height="*"/>
                <!-- Nội dung Form (Scrollable) -->
                <RowDefinition Height="Auto"/>
                <!-- Footer (Nút Tạo) -->
            </Grid.RowDefinitions>

            <!-- HEADER (Tiêu đề đỏ, giống ảnh) -->
            <Grid Grid.Row="0" Background="#C71A1B" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Tiêu đề -->
                <TextBlock Grid.Column="0" Text="Tạo Giao dịch mới" 
                           Foreground="White" FontWeight="Bold" FontSize="18"
                           VerticalAlignment="Center" Margin="20,0,0,0"/>

                <!-- Nút Đóng (X) - Cần hàm CloseButton_Click trong Code-Behind -->
                <Button Grid.Column="1" Click="CloseButton_Click" Background="Transparent" BorderThickness="0" 
                        Width="50" Cursor="Hand" Style="{DynamicResource CloseWindowButtonStyle}">
                    <fa:IconImage Icon="Xmark" Width="16" Height="16" Foreground="White"/>
                </Button>
            </Grid>

            <!-- NỘI DUNG FORM (Grid.Row="1") -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- 5 cặp nhãn và textbox, mỗi cặp 1 dòng -->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- DÒNG 1: Mã học viên / Mã gói tập -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Mã học viên:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBox Text="{Binding MaHocVien}" Width="250" Height="30" Padding="5,0" BorderThickness="0,0,0,1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="(Họ tên học viên thanh toán)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Mã gói tập:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBox Text="{Binding MaGoi}" Width="250" Height="30" Padding="5,0" BorderThickness="0,0,0,1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="(Mã gói thanh toán)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <!-- DÒNG 2: Họ tên học viên / Tên gói tập -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Họ tên học viên:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBox Text="{Binding HoTenHocVien}" Width="250" Height="30" Padding="5,0" BorderThickness="0,0,0,1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="(Họ tên học viên thanh toán)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Tên gói tập:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBox Text="{Binding TenGoiTap}" Width="250" Height="30" Padding="5,0" BorderThickness="0,0,0,1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="(Tên gói tập thanh toán)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <!-- DÒNG 3: Mã nhân viên / Tổng tiền -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Mã nhân viên:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBox Text="{Binding MaNhanVien}" Width="250" Height="30" Padding="5,0" BorderThickness="0,0,0,1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="(Mã nhân viên tạo giao dịch)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Tổng tiền:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBox Text="{Binding TongTien}" Width="250" Height="30" Padding="5,0" BorderThickness="0,0,0,1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="(Tổng tiền cần thanh toán)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <!-- DÒNG 4: Họ tên nhân viên / Đã thanh toán -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Họ tên nhân viên:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBox Text="{Binding HoTenNhanVien}" Width="250" Height="30" Padding="5,0" BorderThickness="0,0,0,1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="(Họ tên nhân viên tạo giao dịch)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Đã thanh toán:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBox Text="{Binding DaThanhToan}" Width="250" Height="30" Padding="5,0" BorderThickness="0,0,0,1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="(Số tiền đã thanh toán)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <!-- DÒNG 5: Ghi chú / Số tiền nợ -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Ghi chú:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBox Text="{Binding GhiChu}" Width="250" Height="30" Padding="5,0" BorderThickness="0,0,0,1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="(Ghi chú giao dịch)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Số tiền nợ:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBox Text="{Binding SoTienNo}" Width="250" Height="30" Padding="5,0" BorderThickness="0,0,0,1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="(Số tiền còn lại cần thanh toán)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                </Grid>
            </ScrollViewer>

            <!-- FOOTER (Grid.Row="2") -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,20">
                <Button Command="{Binding ThemGiaoDichCommand}" 
                        Style="{DynamicResource RoundButtonControlTemplate}" 
                        Padding="30,10" FontWeight="Bold">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Plus" Width="16" Height="16" Margin="10,0,5,0" Foreground="White"/>
                        <TextBlock Text="Tạo" FontSize="20" Width="45" Height="30"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>

    <Window.Resources>
        <!-- Style cho Nút Đóng (X) trên Header màu đỏ -->
        <Style x:Key="CloseWindowButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#A51617"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- RoundButtonControlTemplate (Cần được định nghĩa lại hoặc dùng chung Resource Dictionary) -->
        <Style x:Key="RoundButtonControlTemplate" TargetType="Button">
            <Setter Property="Background" Value="#C71A1B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A51617"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

</Window>