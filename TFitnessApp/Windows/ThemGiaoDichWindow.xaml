<Window x:Class="TFitnessApp.Windows.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFitnessApp.Windows"
        xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Tạo Giao dịch mới"
        Height="650" Width="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="RoundButtonControlTemplate" TargetType="Button">
            <Setter Property="Background" Value="#C71A1B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A51617"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseWindowButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#A51617"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <x:Array x:Key="PaymentMethods" Type="{x:Type sys:String}">
            <sys:String>Tiền mặt</sys:String>
            <sys:String>Chuyển khoản</sys:String>
            <sys:String>Thẻ</sys:String>
        </x:Array>

    </Window.Resources>

    <Border CornerRadius="10" Background="White" BorderBrush="#C71A1B" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#C71A1B" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Tạo Giao dịch mới" 
                           Foreground="White" FontWeight="Bold" FontSize="18"
                           VerticalAlignment="Center" Margin="20,0,0,0"/>

                <Button Grid.Column="1" Click="CloseButton_Click" Background="Transparent" BorderThickness="0" 
                        Width="50" Cursor="Hand" Style="{DynamicResource CloseWindowButtonStyle}">
                    <fa:IconImage Icon="Xmark" Width="16" Height="16" Foreground="White"/>
                </Button>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Mã học viên:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cboMaHocVien" 
                                  IsEditable="True" 
                                  Text="{Binding MaHocVien, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding DanhSachMaHocVien}"
                                  Width="300" Height="30" Padding="5,0" 
                                  BorderThickness="1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"
                                  IsTextSearchEnabled="False"
                                  StaysOpenOnEdit="True"
                                  GotFocus="ComboBox_GotFocus"
                                  KeyUp="ComboBox_KeyUp"
                                  LostFocus="cboMaHocVien_LostFocus"/>
                        <TextBlock x:Name="txtHocVienError" Foreground="Red" FontSize="11" Margin="5,3,0,0" Visibility="Collapsed"/>
                        <TextBlock Text="(Chọn, nhập hoặc tìm kiếm mã học viên)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Mã gói tập:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cboMaGoiTap" 
                                  IsEditable="True" 
                                  Text="{Binding MaGoi, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding DanhSachMaGoiTap}"
                                  Width="300" Height="30" Padding="5,0" 
                                  BorderThickness="1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"
                                  IsTextSearchEnabled="False"
                                  StaysOpenOnEdit="True"
                                  GotFocus="ComboBox_GotFocus"
                                  KeyUp="ComboBox_KeyUp"
                                  LostFocus="cboMaGoiTap_LostFocus"/>
                        <TextBlock x:Name="txtGoiTapError" Foreground="Red" FontSize="11" Margin="5,3,0,0" Visibility="Collapsed"/>
                        <TextBlock Text="(Chọn, nhập hoặc tìm kiếm mã gói tập)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Họ tên học viên:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtHoTenHocVien" Text="{Binding HoTenHocVien}" 
                                 Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                 BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                        <TextBlock Text="(Họ tên học viên thanh toán)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Tên gói tập:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtTenGoiTap" Text="{Binding TenGoiTap}" 
                                 Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                 BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                        <TextBlock Text="(Tên gói tập thanh toán)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Mã nhân viên:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cboMaNhanVien" 
                                  IsEditable="True" 
                                  Text="{Binding MaNhanVien, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding DanhSachMaNhanVien}"
                                  Width="300" Height="30" Padding="5,0" 
                                  BorderThickness="1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"
                                  IsTextSearchEnabled="False"
                                  StaysOpenOnEdit="True"
                                  GotFocus="ComboBox_GotFocus"
                                  KeyUp="ComboBox_KeyUp"
                                  LostFocus="cboMaNhanVien_LostFocus"/>
                        <TextBlock x:Name="txtNhanVienError" Foreground="Red" FontSize="11" Margin="5,3,0,0" Visibility="Collapsed"/>
                        <TextBlock Text="(Chọn, nhập hoặc tìm kiếm mã nhân viên)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Tổng tiền:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtTongTien" Text="{Binding TongTien}" 
                                 Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                 BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                        <TextBlock Text="(Tổng tiền cần thanh toán)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Họ tên nhân viên:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtHoTenNhanVien" Text="{Binding HoTenNhanVien}" 
                                 Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                 BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                        <TextBlock Text="(Họ tên nhân viên tạo giao dịch)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Đã thanh toán:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding DaThanhToan, UpdateSourceTrigger=PropertyChanged}" 
                                 Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                 BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                        <TextBlock Text="(Số tiền đã thanh toán)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Số tiền nợ:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtSoTienNo" Text="{Binding SoTienNo}" 
                                 Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                 BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                        <TextBlock Text="(Số tiền còn lại cần thanh toán)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Phương thức thanh toán:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{StaticResource PaymentMethods}"
                                  SelectedItem="{Binding PhuongThucThanhToan}" 
                                  Width="300" Height="30" Padding="5,0" 
                                  BorderThickness="1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"/>
                        <TextBlock Text="(Phương thức thanh toán học viên chọn)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="5" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Trạng thái:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtTrangThaiThanhToan" Text="{Binding TrangThaiThanhToan}" 
                                 Width="300" Height="30" Padding="5,0" BorderThickness="0,0,0,1" 
                                 BorderBrush="#CCCCCC" VerticalContentAlignment="Center" IsReadOnly="True" Background="#F5F5F5"/>
                        <TextBlock Text="(Trạng thái thanh toán tự động tính)" FontStyle="Italic" FontSize="11" Foreground="#999" Margin="5,3,0,0"/>
                    </StackPanel>

                </Grid>
            </ScrollViewer>

            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,20">
                <Button Click="TaoGiaoDichButton_Click" 
                        Style="{DynamicResource RoundButtonControlTemplate}" 
                        Padding="30,10" FontWeight="Bold">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconImage Icon="Plus" Width="18" Height="18" Margin="10,0,5,0" Foreground="White"/>
                        <TextBlock Text="Tạo" Margin="0,0,0,0" FontSize="24" Width="45" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>