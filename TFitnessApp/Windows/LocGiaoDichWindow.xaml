<Window x:Class="TFitnessApp.Windows.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFitnessApp.Windows"
        xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
        mc:Ignorable="d"
        Title="Bộ Lọc Giao Dịch"
        Height="500" Width="480"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Style cơ bản cho nút hành động (RoundButtonStyle) -->
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#C71A1B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A51617"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho các nút chức năng trong Filter Panel (FilterActionButtonStyle) -->
        <Style x:Key="FilterActionButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundButtonStyle}">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0" Text="Bộ Lọc Giao Dịch" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="#C71A1B" 
                   Margin="0,0,0,15"/>
        <Separator Grid.Row="0" VerticalAlignment="Bottom" Margin="0,0,0,10"/>

        <!-- Nội dung lọc (Scrollable) -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,10,0">

                <!-- Khu vực lọc theo ID (Sử dụng ComboBox) -->
                <TextBlock Text="Lọc theo Mã Định Danh" Margin="0,0,0,10" FontWeight="Bold"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Mã Học Viên:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <!-- cboMaHocVien -->
                        <ComboBox x:Name="cboMaHocVien" 
                                     IsEditable="True"
                                  Text="{Binding MaHocVien, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding DanhSachMaHocVien}"
                                     Height="30" Padding="5,0" 
                                     BorderThickness="1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"
                                     IsTextSearchEnabled="False"
                                     StaysOpenOnEdit="True"
                                     GotFocus="ComboBox_GotFocus"
                                     KeyUp="ComboBox_KeyUp"
                                     LostFocus="cboMaHocVien_LostFocus"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Mã Gói Tập:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <!-- cboMaGoiTap -->
                        <ComboBox x:Name="cboMaGoiTap" 
                                     IsEditable="True" 
                                  Text="{Binding MaGoi, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding DanhSachMaGoiTap}"
                                     Height="30" Padding="5,0" 
                                     BorderThickness="1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"
                                     IsTextSearchEnabled="False"
                                     StaysOpenOnEdit="True"
                                     GotFocus="ComboBox_GotFocus"
                                     KeyUp="ComboBox_KeyUp"
                                     LostFocus="cboMaGoiTap_LostFocus"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Mã Nhân Viên:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <!-- cboMaNhanVien -->
                        <ComboBox x:Name="cboMaNhanVien" 
                                     IsEditable="True" 
                                  Text="{Binding MaNhanVien, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding DanhSachMaNhanVien}"
                                     Height="30" Padding="5,0" 
                                     BorderThickness="1" BorderBrush="#CCCCCC" VerticalContentAlignment="Center"
                                     IsTextSearchEnabled="False"
                                     StaysOpenOnEdit="True"
                                     GotFocus="ComboBox_GotFocus"
                                     KeyUp="ComboBox_KeyUp"
                                     LostFocus="cboMaNhanVien_LostFocus"/>
                    </StackPanel>
                </Grid>

                <!-- Khu vực lọc theo Ngày Giao Dịch -->
                <TextBlock Text="Lọc theo Ngày Giao Dịch" Margin="0,0,0,10" FontWeight="Bold"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Từ Ngày:" Margin="0,0,0,5"/>
                        <DatePicker x:Name="dpTuNgay" Height="30" BorderBrush="#E0E0E0"/>
                    </StackPanel>

                    <TextBlock Grid.Column="1" Text="—" VerticalAlignment="Center" Margin="0,25,0,0" FontSize="18"/>

                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                        <TextBlock Text="Đến Ngày:" Margin="0,0,0,5"/>
                        <DatePicker x:Name="dpDenNgay" Height="30" BorderBrush="#E0E0E0"/>
                    </StackPanel>
                </Grid>

                <!-- Khu vực lọc theo Tổng Tiền (Sử dụng ComboBox) -->
                <TextBlock Text="Lọc theo Tổng Tiền (VNĐ)" Margin="0,0,0,10" FontWeight="Bold"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,0,0">
                        <TextBlock Text="Chọn Khoảng Giá:" Margin="0,0,0,5"/>
                        <!-- Đảm bảo x:Name là cboLocTongTien và không có IsEditable -->
                        <ComboBox x:Name="cboLocTongTien" 
                                     Height="30" Padding="5" BorderBrush="#E0E0E0"
                                     ToolTip="Chọn khoảng tổng tiền giao dịch"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Nút hành động -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Hủy Bỏ Lọc" 
                    Style="{StaticResource RoundButtonStyle}" 
                    Background="#666666" 
                    Margin="0,0,10,0" 
                    Click="Cancel_Click" Height="28" Width="85"/>
            <Button Content="Áp Dụng Lọc" 
                    Style="{StaticResource RoundButtonStyle}" 
                    Click="Apply_Click" Width="85"/>
        </StackPanel>
    </Grid>
</Window>