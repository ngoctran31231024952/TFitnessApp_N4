<Window x:Class="TFitnessApp.Windows.ThemPTWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Thêm PT mới" Height="600" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" FontFamily="Lato">

    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A01516"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Nội dung Form -->
                <RowDefinition Height="80"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#C71A1B" CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock x:Name="txtHeaderTitle" Text="THÊM PT MỚI" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0" Style="{StaticResource CloseButtonStyle}" Click="BtnHuy_Click">
                        <fa:IconImage Icon="Times" Width="14" Foreground="White"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Form (Đã thêm ScrollViewer để tránh bị che khuất nội dung) -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="40,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cột Trái -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                        <StackPanel.Resources>
                            <Style TargetType="TextBox">
                                <Setter Property="Padding" Value="0,5"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#999"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Margin" Value="0,0,0,25"/>
                            </Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#333"/>
                                <Setter Property="FontWeight" Value="Regular"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Margin" Value="0,0,0,5"/>
                            </Style>
                        </StackPanel.Resources>

                        <!-- Mã PT -->
                        <Grid Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Mã PT" VerticalAlignment="Center"/>
                            <Border Grid.Column="2" Background="#E0E0E0" CornerRadius="0" HorizontalAlignment="Left">
                                <TextBlock x:Name="txtMaPT" Text="PTxxxx" Padding="15,5" FontWeight="Bold" Foreground="#333"/>
                            </Border>
                        </Grid>

                        <TextBlock Text="Họ tên PT"/>
                        <TextBox x:Name="txtHoTen"/>

                        <!-- Chi nhánh -->
                        <TextBlock Text="Chi nhánh"/>
                        <ComboBox x:Name="cmbChiNhanh" Padding="5" Margin="0,0,0,25" BorderThickness="0,0,0,1" DisplayMemberPath="TenCN" SelectedValuePath="MaCN"/>

                        <!-- Giới tính -->
                        <TextBlock Text="Giới tính"/>
                        <ComboBox x:Name="cmbGioiTinh" Padding="5" Margin="0,0,0,25" BorderThickness="0,0,0,1">
                            <ComboBoxItem Content="Nam" IsSelected="True"/>
                            <ComboBoxItem Content="Nữ"/>
                        </ComboBox>

                        <TextBlock Text="Email"/>
                        <TextBox x:Name="txtEmail"/>

                        <TextBlock Text="SĐT"/>
                        <TextBox x:Name="txtSDT" Margin="0,0,0,10"/>
                    </StackPanel>

                    <!-- Cột Phải: Ảnh -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Top" Margin="0,20,0,0">
                        <TextBlock Text="Ảnh PT" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        <Border Background="#D9D9D9" Height="220" Width="200" HorizontalAlignment="Left">
                            <Grid>
                                <fa:IconImage x:Name="iconDefaultAvatar" Icon="User" Foreground="White" Height="100" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <Image x:Name="imgAvatar" Stretch="UniformToFill"/>
                            </Grid>
                        </Border>
                        <Button Content="Chọn ảnh..." Margin="0,15,0,0" Width="120" Height="30" Background="White" BorderBrush="#CCC" BorderThickness="1" Click="BtnChonAnh_Click" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button Click="BtnLuu_Click" Background="#C71A1B" Foreground="White" FontWeight="Bold" FontSize="15" BorderThickness="0" Width="140" Height="45" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <fa:IconImage Icon="Plus" Width="14" Foreground="White" Margin="0,0,8,0"/>
                        <TextBlock x:Name="txtBtnAction" Text="Tạo" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>