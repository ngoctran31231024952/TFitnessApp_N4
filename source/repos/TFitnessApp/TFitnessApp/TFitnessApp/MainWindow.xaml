<Window x:Class="TFitnessApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TFitnessApp"
        mc:Ignorable="d"
        Title="TFitness - Khỏe hơn mỗi ngày" Height="450" Width="800"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        MinHeight="600"
        MinWidth="900">
    <Window.Resources>

        <Style x:Key="NoHoverButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NoHoverToggleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
            <Setter Property="Foreground" Value="{StaticResource TFitness.White}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" 
                                CornerRadius="7" 
                                Padding="{TemplateBinding Padding}" 
                                Background="Transparent">
                            <ContentPresenter x:Name="ItemContentPresenter" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource TFitness.White}"/>
                                <Setter Property="Foreground" Value="{StaticResource TFitness.PrimaryRed}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="#33FFFFFF"/>
                            </MultiTrigger>
                            <DataTrigger Binding="{Binding ElementName=HamburgerButton, Path=IsChecked}" Value="True">
                                <Setter TargetName="ItemContentPresenter" Property="HorizontalAlignment" Value="Center"/>

                                <Setter Property="Padding" Value="15,15"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuIcon" TargetType="fa:IconImage">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=HamburgerButton, Path=IsChecked}" Value="True">
                    <Setter Property="Margin" Value="0"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MenuText" TargetType="TextBlock">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=HamburgerButton, Path=IsChecked}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LogoTextStackPanel" TargetType="StackPanel">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=HamburgerButton, Path=IsChecked}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TopBarButton" TargetType="Button" BasedOn="{StaticResource NoHoverButton}">
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource TFitness.PrimaryRed}"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalOffset" Value="10"/>
            <Setter Property="HasDropShadow" Value="False"/>
            <Setter Property="Popup.AllowsTransparency" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{TemplateBinding Background}" 
            CornerRadius="6" 
            BorderThickness="0"
            Margin="10">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="12" Color="#AAA" Opacity="0.3"/>
                            </Border.Effect>
                            <ItemsPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="25"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter ContentSource="Icon" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <ContentPresenter Grid.Column="1" ContentSource="Header" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="SidebarBorder" Width="230" Grid.Column="0" 
                Background="{StaticResource TFitness.HeaderGradient}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ToggleButton x:Name="HamburgerButton" 
              Grid.Column="1" 
              Width="40" Height="40" 
              VerticalAlignment="Center" 
              Foreground="White" FontSize="18">

                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton" BasedOn="{StaticResource NoHoverToggleButton}">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Margin" Value="0,-8,4,0"/>

                                <Style.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,-8,0,0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>

                        <fa:IconImage Icon="Bars" Foreground="White" Width="22"/>

                        <ToggleButton.Triggers>
                            <EventTrigger RoutedEvent="ToggleButton.Checked">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="SidebarBorder" 
                                     Storyboard.TargetProperty="Width"
                                     To="70" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="SidebarBorder" 
                                     Storyboard.TargetProperty="Width"
                                     To="230" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ToggleButton.Triggers>

                    </ToggleButton>
                    <Button x:Name="LogoButton" 
                            Click="LogoButton_Click"
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            Margin="15,0,0,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NoHoverButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=HamburgerButton, Path=IsChecked}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <fa:IconImage Icon="Dumbbell" 
                                          Foreground="White" 
                                          Width="45" Height="45" Margin="-4,0,8,0"
                                          VerticalAlignment="Center">
                                <fa:IconImage.Style>
                                    <Style TargetType="fa:IconImage">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=HamburgerButton, Path=IsChecked}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </fa:IconImage.Style>
                            </fa:IconImage>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center"
                                        Style="{StaticResource LogoTextStackPanel}">
                                <TextBlock Text="TFitness" 
                                           Foreground="White" 
                                           FontSize="25" FontWeight="Bold"/>
                                <TextBlock Text="Khỏe hơn mỗi ngày" Foreground="#FFFFFF" 
                                           Opacity="1" 
                                           FontSize="13" Margin="0,-4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Button>

                </Grid>
                <Border Height="1" 
        Background="White" 
        Opacity="0.5" 
        VerticalAlignment="Bottom" 
        Margin="0,69,0,0"/>

                <ListBox x:Name="MenuListBox" Grid.Row="1" Margin="0,4,0,0"
                         Background="Transparent" BorderThickness="0" 
                         ItemContainerStyle="{StaticResource MenuListBoxItemStyle}"
                         SelectedIndex="0" 
                         ScrollViewer.VerticalScrollBarVisibility="Hidden"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         SelectionChanged="MenuListBox_SelectionChanged">

                    <ListBoxItem x:Name="ItemTongQuan">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <fa:IconImage Icon="House" Style="{StaticResource MenuIcon}"/>
                            <TextBlock Text="Tổng quan" Style="{StaticResource MenuText}"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="ItemGoiTap">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <fa:IconImage Icon="Archive" Style="{StaticResource MenuIcon}"/>
                            <TextBlock Text="Gói tập" Style="{StaticResource MenuText}"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="ItemLichTap">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <fa:IconImage Icon="Calendar" Style="{StaticResource MenuIcon}"/>
                            <TextBlock Text="Lịch tập" Style="{StaticResource MenuText}"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="ItemHocVien">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <fa:IconImage Icon="Users" Style="{StaticResource MenuIcon}"/>
                            <TextBlock Text="Học viên" Style="{StaticResource MenuText}"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="ItemHopDong">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <fa:IconImage Icon="FileAlt" Style="{StaticResource MenuIcon}"/>
                            <TextBlock Text="Hợp đồng" Style="{StaticResource MenuText}"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="ItemGiaoDich">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <fa:IconImage Icon="CreditCard" Style="{StaticResource MenuIcon}"/>
                            <TextBlock Text="Giao dịch" Style="{StaticResource MenuText}"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="ItemTaiKhoan">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <fa:IconImage Icon="User" Style="{StaticResource MenuIcon}"/>
                            <TextBlock Text="Tài khoản" Style="{StaticResource MenuText}"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="ItemDiemDanh">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <fa:IconImage Icon="CheckSquare" Style="{StaticResource MenuIcon}"/>
                            <TextBlock Text="Điểm danh" Style="{StaticResource MenuText}"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="ItemChiSoSucKhoe">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <fa:IconImage Icon="Heartbeat" Style="{StaticResource MenuIcon}"/>
                            <TextBlock Text="Chỉ số sức khỏe" Style="{StaticResource MenuText}"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </Grid>
        </Border>

        <Grid Grid.Column="1" 
              Background="{StaticResource TFitness.SecondaryBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
        Background="White" 
        BorderBrush="#EEEEEE" 
        BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="PageTitle" Text="Tổng quan" 
                   FontSize="20" FontWeight="Bold" 
                   VerticalAlignment="Center" HorizontalAlignment="Left"
                   Margin="25,0"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,25,0">

                        <Button Style="{StaticResource TopBarButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="QuestionCircle" Foreground="Gray" Width="16" Height="16" VerticalAlignment="Center"/>
                                <TextBlock Text="Trợ giúp" Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource TopBarButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconImage Icon="Heart" Foreground="Gray" Width="16" Height="16" VerticalAlignment="Center"/>
                                <TextBlock Text="Góp ý" Margin="5,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="AvatarButton" 
        Style="{StaticResource TopBarButton}"
        Click="AvatarButton_Click">

                            <StackPanel Orientation="Horizontal">
                                <Grid Width="32" Height="32" VerticalAlignment="Center">
                                    <Ellipse Fill="#007ACC"/>
                                    <TextBlock Text="O" Foreground="White" FontSize="16" FontWeight="SemiBold"
                       HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,-1,10,0"/>
                                </Grid>

                                <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                                    <TextBlock Text="Nguyễn Oanh" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Text="Quản trị viên" Foreground="Gray" FontSize="11" Margin="0,-2,0,0"/>
                                </StackPanel>

                                <fa:IconImage Icon="ChevronDown" Foreground="Gray" Width="10" Height="10" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Tài khoản của tôi">
                                        <MenuItem.Icon>
                                            <fa:IconImage Icon="UserCircle" Width="16" Height="16" Foreground="#555555"/>
                                        </MenuItem.Icon>
                                    </MenuItem>

                                    <MenuItem Header="Đăng xuất">
                                        <MenuItem.Icon>
                                            <fa:IconImage Icon="SignOutAlt" Width="16" Height="16" Foreground="#555555"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </Button.ContextMenu>

                        </Button>

                        <Button Style="{StaticResource TopBarButton}">
                            <Grid>
                                <fa:IconImage Icon="Bell" Foreground="Gray" Width="18" Height="18" VerticalAlignment="Center"/>
                                <Border CornerRadius="7" Background="#D93025" Padding="4,1" MinWidth="14" 
                            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5,-8,0">
                                    <TextBlock Text="37" Foreground="White" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Button>

                    </StackPanel>
                </Grid>
            </Border>

            <Frame Grid.Row="1" 
                   x:Name="MainFrame" 
                   NavigationUIVisibility="Hidden" 
                   Margin="10,10,10,10"/>
        </Grid>
    </Grid>
</Window>